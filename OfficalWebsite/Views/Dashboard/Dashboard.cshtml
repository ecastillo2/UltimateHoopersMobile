                                        <span class="day">1</span>
                                        <span class="month">Jun</span>
                                    </div>
                                    <div class="event-details">
                                        <h6 class="event-title">Weekend Showdown</h6>
                                        <p class="event-info">
                                            <i class="bi bi-geo-alt"></i>
                                            <span>Community Center</span>
                                            <i class="bi bi-clock"></i>
                                            <span>1:00 PM - 4:00 PM</span>
                                        </p>
                                    </div>
                                    <div class="ms-auto">
                                        <span class="badge bg-primary">Registered</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Activity -->
                        <div class="content-card">
                            <div class="card-header">
                                <h5 class="mb-0">Recent Activity</h5>
                            </div>
                            <div class="card-body">
                                <div class="recent-activity-item">
                                    <div class="activity-icon bg-success">
                                        <i class="bi bi-check-circle"></i>
                                    </div>
                                    <div class="activity-content">
                                        <h6 class="activity-title">Game Won</h6>
                                        <p class="activity-info">You won a game at Downtown Courts with a score of 21-15</p>
                                    </div>
                                    <div class="activity-time">
                                        2 hours ago
                                    </div>
