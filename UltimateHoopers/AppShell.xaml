<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:pages="clr-namespace:UltimateHoopers.Pages"
       x:Class="UltimateHoopers.AppShell"
       FlyoutBehavior="Flyout"
       BackgroundColor="{StaticResource CardBackgroundColor}"
       FlyoutWidth="250"
       Shell.NavBarIsVisible="False">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource PrimaryColor}"
              HeightRequest="150"
              Padding="20">
            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="Ultimate Hoopers"
                       TextColor="White"
                       FontSize="22"
                       FontAttributes="Bold" />
                <Label Text="Welcome, Player!"
                       TextColor="White"
                       FontSize="16" 
                       Margin="0,5,0,0" />
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Flyout Items -->
    <FlyoutItem Title="Home" Icon="home.png" Route="HomePage">
        <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" Route="HomePage" />
    </FlyoutItem>

    <!-- Posts Page -->
    <FlyoutItem Title="Posts" Icon="home.png" Route="PostsPage">
        <ShellContent ContentTemplate="{DataTemplate pages:PostsPage}" Route="PostsPage" />
    </FlyoutItem>

    <!-- Training -->
    <FlyoutItem Title="Training" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" Route="TrainingPage" />
    </FlyoutItem>

    <!-- MenuItems appear at the bottom of the Flyout -->
    <MenuItem Text="Notifications" 
          IconImageSource="notification.png"
          Command="{Binding NavigateToNotificationsCommand}" />
    <MenuItem Text="About" 
      IconImageSource="about.png" />
    <MenuItem Text="FAQ" 
   IconImageSource="FAQ.png" />
    <MenuItem Text="Help &amp; Support" 
              IconImageSource="help.png"
              Command="{Binding HelpCommand}" />
    <MenuItem Text="Logout" 
              IconImageSource="logo_uh.png"
              Command="{Binding LogoutCommand}" />
</Shell>