<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:pages="clr-namespace:UltimateHoopers.Pages"
       x:Class="UltimateHoopers.AppShell"
       FlyoutBehavior="Flyout"
       BackgroundColor="{StaticResource CardBackgroundColor}"
       FlyoutWidth="250">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource PrimaryColor}"
              HeightRequest="150"
              Padding="20">
            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="Ultimate Hoopers"
                       TextColor="White"
                       FontSize="22"
                       FontAttributes="Bold" />
                <Label Text="Welcome, Player!"
                       TextColor="White"
                       FontSize="16" 
                       Margin="0,5,0,0" />
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Flyout Items -->
    <FlyoutItem Title="Home" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" Route="HomePage" />
    </FlyoutItem>

    <FlyoutItem Title="Posts" Icon="search.png">
        <ShellContent ContentTemplate="{DataTemplate pages:PostsPage}" Route="PostsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Stats" Icon="search.png">
        <ShellContent ContentTemplate="{DataTemplate pages:StatsPage}" Route="statsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Stats" Icon="search.png">
        <ShellContent ContentTemplate="{DataTemplate pages:FindRunsPage}" Route="rindrunsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Hoopers" Icon="search.png">
        <ShellContent ContentTemplate="{DataTemplate pages:HoopersPage}" Route="HoopersPage" />
    </FlyoutItem>

    <FlyoutItem Title="Teams" Icon="team.png">
        <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
        <!-- Replace with TeamsPage once available -->
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="settings.png">
        <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" />
        <!-- Replace with SettingsPage once available -->
    </FlyoutItem>

    <!-- MenuItems appear at the bottom of the Flyout -->
    <MenuItem Text="Notifications" 
              IconImageSource="notification.png" />
    <MenuItem Text="Help &amp; Support" 
              IconImageSource="help.png"
              Command="{Binding HelpCommand}" />
    <MenuItem Text="Logout" 
              IconImageSource="logout.png"
              Command="{Binding LogoutCommand}" />
</Shell>