<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UltimateHoopers.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:UltimateHoopers"
    xmlns:pages="clr-namespace:UltimateHoopers.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="UltimateHoopers">

    <!-- Login Page - This will be the initial page -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <!-- Main Page - Will be navigated to after login -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>