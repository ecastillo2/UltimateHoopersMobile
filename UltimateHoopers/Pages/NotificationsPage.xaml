<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:UltimateHoopers.Converters"
             xmlns:viewmodels="clr-namespace:UltimateHoopers.ViewModels"
             x:Class="UltimateHoopers.Pages.NotificationsPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <ContentPage.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:UnreadToColorConverter x:Key="UnreadToColorConverter" />
        <!-- Add a local instance of the ViewModel to reference in commands -->
        <viewmodels:NotificationsViewModel x:Key="NotificationsVM" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto"
          Padding="20">

        <!-- Header with Title -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="*,Auto,Auto"
              Margin="0,10,0,20">

            <VerticalStackLayout Grid.Column="0">
                <Label Text="Notifications"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryColor}" />

                <Label Text="Keep up with the latest updates"
                       FontSize="16"
                       TextColor="{StaticResource SecondaryTextColor}" />
            </VerticalStackLayout>

            <!-- Settings Button -->
            <Frame Grid.Column="1"
                   CornerRadius="25"
                   HeightRequest="50"
                   WidthRequest="50"
                   Padding="0"
                   BorderColor="{StaticResource BorderColor}"
                   BackgroundColor="{StaticResource CardBackgroundColor}"
                   HasShadow="True"
                   Margin="0,0,10,0">

                <Label Text="⚙️"
                       FontSize="24"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{StaticResource PrimaryTextColor}" />

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSettingsClicked" />
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Back Button -->
            <Frame Grid.Column="2"
                   CornerRadius="25"
                   HeightRequest="50"
                   WidthRequest="50"
                   Padding="0"
                   BorderColor="{StaticResource BorderColor}"
                   BackgroundColor="{StaticResource CardBackgroundColor}"
                   HasShadow="True">

                <Label Text="←"
                       FontSize="24"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{StaticResource PrimaryTextColor}" />

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked" />
                </Frame.GestureRecognizers>
            </Frame>
        </Grid>

        <!-- Content -->
        <Grid Grid.Row="1" RowDefinitions="Auto,Auto,*">
            <!-- Filter Tabs -->
            <Frame Grid.Row="0"
                   Padding="5"
                   CornerRadius="10"
                   BackgroundColor="{StaticResource CardBackgroundColor}"
                   BorderColor="{StaticResource BorderColor}"
                   HasShadow="True"
                   Margin="0,0,0,15">

                <Grid ColumnDefinitions="*,*,*">
                    <!-- All Tab -->
                    <Frame Grid.Column="0"
                           BackgroundColor="{StaticResource PrimaryColor}"
                           CornerRadius="8"
                           Padding="0"
                           HasShadow="False"
                           x:Name="AllTabFrame">
                        <Label Text="All"
                               TextColor="White"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Padding="0,10"/>

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAllTabSelected" />
                        </Frame.GestureRecognizers>
                    </Frame>

                    <!-- Games Tab -->
                    <Frame Grid.Column="1"
                           BackgroundColor="Transparent"
                           CornerRadius="8"
                           Padding="0"
                           HasShadow="False"
                           x:Name="GamesTabFrame">
                        <Label Text="Games"
                               TextColor="{StaticResource PrimaryTextColor}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Padding="0,10"/>

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGamesTabSelected" />
                        </Frame.GestureRecognizers>
                    </Frame>

                    <!-- Activity Tab -->
                    <Frame Grid.Column="2"
                           BackgroundColor="Transparent"
                           CornerRadius="8"
                           Padding="0"
                           HasShadow="False"
                           x:Name="ActivityTabFrame">
                        <Label Text="Activity"
                               TextColor="{StaticResource PrimaryTextColor}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Padding="0,10"/>

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnActivityTabSelected" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </Grid>
            </Frame>

            <!-- Mark All as Read Button -->
            <Button Grid.Row="1"
                    Text="Mark All as Read"
                    FontSize="14"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource PrimaryColor}"
                    BorderColor="{StaticResource PrimaryColor}"
                    BorderWidth="1"
                    CornerRadius="20"
                    HeightRequest="40"
                    Margin="0,0,0,15"
                    Clicked="OnMarkAllAsReadClicked" />

            <!-- Notifications List -->
            <RefreshView Grid.Row="2"
                         IsRefreshing="{Binding IsRefreshing}"
                         Command="{Binding RefreshCommand}">

                <CollectionView x:Name="NotificationsCollection"
                                ItemsSource="{Binding Notifications}"
                                EmptyView="No notifications to display"
                                SelectionMode="None">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,0,0,10"
                                   Padding="15"
                                   BorderColor="{StaticResource BorderColor}"
                                   BackgroundColor="{StaticResource CardBackgroundColor}"
                                   CornerRadius="10"
                                   HasShadow="True">

                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <!-- Notification Icon -->
                                    <Frame Grid.Column="0"
                                           HeightRequest="50"
                                           WidthRequest="50"
                                           CornerRadius="25"
                                           Padding="0"
                                           BackgroundColor="{Binding IconBackground}"
                                           BorderColor="{StaticResource BorderColor}"
                                           Margin="0,0,10,0">

                                        <Label Text="{Binding IconText}"
                                               TextColor="White"
                                               FontSize="20"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Frame>

                                    <!-- Notification Content -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="5">
                                        <Label Text="{Binding Title}"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource PrimaryTextColor}"
                                               FontSize="16"/>

                                        <Label Text="{Binding Message}"
                                               TextColor="{StaticResource SecondaryTextColor}"
                                               FontSize="14"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"/>

                                        <Label Text="{Binding TimeAgo}"
                                               TextColor="{StaticResource SecondaryTextColor}"
                                               FontSize="12"
                                               Opacity="0.7"/>
                                    </VerticalStackLayout>

                                    <!-- Unread Indicator -->
                                    <Frame Grid.Column="2"
                                           IsVisible="{Binding IsUnread}"
                                           HeightRequest="10"
                                           WidthRequest="10"
                                           CornerRadius="5"
                                           Padding="0"
                                           BackgroundColor="{StaticResource PrimaryColor}"
                                           VerticalOptions="Start"
                                           HorizontalOptions="End" />
                                </Grid>

                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={StaticResource NotificationsVM}, Path=NotificationTappedCommand}"
                                        CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>

        <!-- Navigation Footer -->
        <Grid Grid.Row="2"
              ColumnDefinitions="*,*,*,*"
              BackgroundColor="{StaticResource CardBackgroundColor}"
              HeightRequest="70"
              Margin="-20,0,-20,0"
              Padding="0,5,0,20">

            <VerticalStackLayout Grid.Column="0"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="2">
                <Label Text="🏠"
                       FontSize="20"
                       TextColor="{StaticResource SecondaryTextColor}"
                       HorizontalOptions="Center" />
                <Label Text="Home"
                       FontSize="12"
                       TextColor="{StaticResource SecondaryTextColor}"
                       HorizontalOptions="Center" />

                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnHomeNavigationClicked" />
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="2">
                <Label Text="📊"
                       FontSize="20"
                       TextColor="{StaticResource SecondaryTextColor}"
                       HorizontalOptions="Center" />
                <Label Text="Stats"
                       FontSize="12"
                       TextColor="{StaticResource SecondaryTextColor}"
                       HorizontalOptions="Center" />

                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnStatsNavigationClicked" />
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="2">
                <Label Text="🏀"
                       FontSize="20"
                       TextColor="{StaticResource SecondaryTextColor}"
                       HorizontalOptions="Center" />
                <Label Text="Games"
                       FontSize="12"
                       TextColor="{StaticResource SecondaryTextColor}"
                       HorizontalOptions="Center" />

                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnGamesNavigationClicked" />
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="3"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"
                                 Spacing="2">
                <Label Text="🔔"
                       FontSize="20"
                       TextColor="{StaticResource PrimaryColor}"
                       HorizontalOptions="Center" />
                <Label Text="Notifications"
                       FontSize="12"
                       TextColor="{StaticResource PrimaryColor}"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>