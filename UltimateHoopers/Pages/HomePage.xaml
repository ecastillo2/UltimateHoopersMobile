<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="UltimateHoopers.Pages.HomePage"
             Title="Home"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto,*" Padding="20">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Margin="0,20,0,20">
            <Label Text="Ultimate Hoopers" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryColor}" />
            <Label Text="Welcome to your basketball hub" 
                   FontSize="16"
                   TextColor="{StaticResource SecondaryTextColor}"
                   Margin="0,5,0,0" />

            <Button Text="Open Menu" 
                    Clicked="OnMenuClicked"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    TextColor="White"
                    Margin="0,20,0,0" 
                    HeightRequest="50"
                    CornerRadius="25" />
        </VerticalStackLayout>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout>
                <Label Text="Welcome to the Ultimate Hoopers app!" 
                       FontSize="20"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource PrimaryTextColor}"
                       Margin="0,50,0,0" />
                <Label Text="Use the menu button above or swipe from the left edge to open the navigation menu."
                       Margin="0,20,0,0"
                       TextColor="{StaticResource SecondaryTextColor}"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>