<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UltimateHoopers.Pages.ForgotPasswordPage"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             BackgroundColor="{StaticResource PageBackgroundColor}">

    <Grid RowDefinitions="Auto,*,Auto"
          Padding="20">

        <!-- Header with Back Button -->
        <Grid Grid.Row="0" 
              ColumnDefinitions="Auto,*"
              Margin="0,40,0,20">

            <!-- Back Button -->
            <Frame Grid.Column="0"
                   CornerRadius="25"
                   HeightRequest="50"
                   WidthRequest="50"
                   Padding="0"
                   BorderColor="{StaticResource BorderColor}"
                   BackgroundColor="{StaticResource CardBackgroundColor}"
                   HasShadow="True"
                   Margin="0,0,15,0">

                <Label Text="←"
                       FontSize="24"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{StaticResource PrimaryTextColor}" />

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackClicked" />
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Title Section -->
            <VerticalStackLayout Grid.Column="1" 
                                 VerticalOptions="Center">
                <Label Text="Forgot Password"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryColor}" />

                <Label Text="Reset your account password"
                       FontSize="16"
                       TextColor="{StaticResource SecondaryTextColor}" />
            </VerticalStackLayout>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="30"
                                 VerticalOptions="Center">

                <!-- Logo -->
                <Image Source="logo_uh.png"
                       HeightRequest="100"
                       WidthRequest="100"
                       HorizontalOptions="Center"
                       Margin="0,0,0,20" />

                <!-- Step Indicator -->
                <Grid x:Name="StepIndicatorGrid"
                      ColumnDefinitions="*,*,*"
                      ColumnSpacing="10"
                      Margin="0,0,0,20">

                    <!-- Step 1 -->
                    <VerticalStackLayout Grid.Column="0"
                                         HorizontalOptions="Center">
                        <Frame x:Name="Step1Circle"
                               CornerRadius="20"
                               HeightRequest="40"
                               WidthRequest="40"
                               Padding="0"
                               BackgroundColor="{StaticResource PrimaryColor}"
                               BorderColor="{StaticResource PrimaryColor}"
                               HasShadow="False">
                            <Label Text="1"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                        <Label Text="Email"
                               FontSize="12"
                               TextColor="{StaticResource PrimaryColor}"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0" />
                    </VerticalStackLayout>

                    <!-- Step 2 -->
                    <VerticalStackLayout Grid.Column="1"
                                         HorizontalOptions="Center">
                        <Frame x:Name="Step2Circle"
                               CornerRadius="20"
                               HeightRequest="40"
                               WidthRequest="40"
                               Padding="0"
                               BackgroundColor="{StaticResource BorderColor}"
                               BorderColor="{StaticResource BorderColor}"
                               HasShadow="False">
                            <Label Text="2"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource SecondaryTextColor}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                        <Label Text="Verify"
                               FontSize="12"
                               TextColor="{StaticResource SecondaryTextColor}"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0" />
                    </VerticalStackLayout>

                    <!-- Step 3 -->
                    <VerticalStackLayout Grid.Column="2"
                                         HorizontalOptions="Center">
                        <Frame x:Name="Step3Circle"
                               CornerRadius="20"
                               HeightRequest="40"
                               WidthRequest="40"
                               Padding="0"
                               BackgroundColor="{StaticResource BorderColor}"
                               BorderColor="{StaticResource BorderColor}"
                               HasShadow="False">
                            <Label Text="3"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource SecondaryTextColor}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                        <Label Text="Reset"
                               FontSize="12"
                               TextColor="{StaticResource SecondaryTextColor}"
                               HorizontalOptions="Center"
                               Margin="0,5,0,0" />
                    </VerticalStackLayout>
                </Grid>

                <!-- Step 1: Email Input -->
                <VerticalStackLayout x:Name="EmailStep"
                                     Spacing="20">

                    <Label Text="Enter your email address and we'll send you a verification code to reset your password."
                           FontSize="16"
                           TextColor="{StaticResource SecondaryTextColor}"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap" />

                    <Frame BorderColor="Transparent"
                           BackgroundColor="{StaticResource CardBackgroundColor}"
                           CornerRadius="10"
                           Padding="0"
                           HasShadow="True">

                        <Border Stroke="{StaticResource BorderColor}"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 10">
                            <Grid ColumnDefinitions="Auto,*" Padding="15,10">
                                <Label Text="✉️"
                                       FontSize="20"
                                       VerticalOptions="Center"
                                       Grid.Column="0" 
                                       Margin="0,0,10,0" />

                                <Entry x:Name="EmailEntry"
                                       Placeholder="Enter your email address"
                                       Keyboard="Email"
                                       Grid.Column="1"
                                       VerticalOptions="Center"
                                       TextColor="Black"
                                       BackgroundColor="Transparent" />
                            </Grid>
                        </Border>
                    </Frame>

                    <Button x:Name="SendCodeButton"
                            Text="Send Verification Code"
                            FontAttributes="Bold"
                            BackgroundColor="{StaticResource PrimaryColor}"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnSendCodeClicked" />
                </VerticalStackLayout>

                <!-- Step 2: Code Verification -->
                <VerticalStackLayout x:Name="CodeStep"
                                     Spacing="20"
                                     IsVisible="False">

                    <Label Text="Enter the 6-digit verification code sent to your email address."
                           FontSize="16"
                           TextColor="{StaticResource SecondaryTextColor}"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap" />

                    <Label x:Name="SentToEmailLabel"
                           Text="Code sent to: example@email.com"
                           FontSize="14"
                           TextColor="{StaticResource PrimaryColor}"
                           HorizontalTextAlignment="Center"
                           FontAttributes="Bold" />

                    <!-- Verification Code Input -->
                    <Grid ColumnDefinitions="*,*,*,*,*,*"
                          ColumnSpacing="10"
                          HorizontalOptions="Center">

                        <Frame Grid.Column="0" CornerRadius="8" BorderColor="{StaticResource BorderColor}" Padding="0" HeightRequest="50" WidthRequest="50">
                            <Entry x:Name="Code1Entry" MaxLength="1" FontSize="20" HorizontalTextAlignment="Center" TextChanged="OnCodeEntryTextChanged" />
                        </Frame>
                        <Frame Grid.Column="1" CornerRadius="8" BorderColor="{StaticResource BorderColor}" Padding="0" HeightRequest="50" WidthRequest="50">
                            <Entry x:Name="Code2Entry" MaxLength="1" FontSize="20" HorizontalTextAlignment="Center" TextChanged="OnCodeEntryTextChanged" />
                        </Frame>
                        <Frame Grid.Column="2" CornerRadius="8" BorderColor="{StaticResource BorderColor}" Padding="0" HeightRequest="50" WidthRequest="50">
                            <Entry x:Name="Code3Entry" MaxLength="1" FontSize="20" HorizontalTextAlignment="Center" TextChanged="OnCodeEntryTextChanged" />
                        </Frame>
                        <Frame Grid.Column="3" CornerRadius="8" BorderColor="{StaticResource BorderColor}" Padding="0" HeightRequest="50" WidthRequest="50">
                            <Entry x:Name="Code4Entry" MaxLength="1" FontSize="20" HorizontalTextAlignment="Center" TextChanged="OnCodeEntryTextChanged" />
                        </Frame>
                        <Frame Grid.Column="4" CornerRadius="8" BorderColor="{StaticResource BorderColor}" Padding="0" HeightRequest="50" WidthRequest="50">
                            <Entry x:Name="Code5Entry" MaxLength="1" FontSize="20" HorizontalTextAlignment="Center" TextChanged="OnCodeEntryTextChanged" />
                        </Frame>
                        <Frame Grid.Column="5" CornerRadius="8" BorderColor="{StaticResource BorderColor}" Padding="0" HeightRequest="50" WidthRequest="50">
                            <Entry x:Name="Code6Entry" MaxLength="1" FontSize="20" HorizontalTextAlignment="Center" TextChanged="OnCodeEntryTextChanged" />
                        </Frame>
                    </Grid>

                    <Button x:Name="VerifyCodeButton"
                            Text="Verify Code"
                            FontAttributes="Bold"
                            BackgroundColor="{StaticResource PrimaryColor}"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            IsEnabled="False"
                            Clicked="OnVerifyCodeClicked" />

                    <!-- Resend Code -->
                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 Spacing="5">
                        <Label Text="Didn't receive the code?"
                               TextColor="{StaticResource SecondaryTextColor}"
                               FontSize="14" />
                        <Label x:Name="ResendCodeLabel"
                               Text="Resend"
                               TextColor="{StaticResource PrimaryColor}"
                               FontSize="14"
                               FontAttributes="Bold">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnResendCodeClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                    <!-- Countdown Timer -->
                    <Label x:Name="CountdownLabel"
                           Text="Resend available in 60 seconds"
                           FontSize="12"
                           TextColor="{StaticResource SecondaryTextColor}"
                           HorizontalOptions="Center"
                           IsVisible="False" />
                </VerticalStackLayout>

                <!-- Step 3: New Password -->
                <VerticalStackLayout x:Name="PasswordStep"
                                     Spacing="20"
                                     IsVisible="False">

                    <Label Text="Create your new password. Make sure it's strong and secure."
                           FontSize="16"
                           TextColor="{StaticResource SecondaryTextColor}"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap" />

                    <Frame BorderColor="Transparent"
                           BackgroundColor="{StaticResource CardBackgroundColor}"
                           CornerRadius="10"
                           Padding="0"
                           HasShadow="True">

                        <VerticalStackLayout Spacing="0">
                            <!-- New Password Entry -->
                            <Border Stroke="{StaticResource BorderColor}"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 10,10,0,0">
                                <Grid ColumnDefinitions="Auto,*,Auto" Padding="15,10">
                                    <Label Text="🔒"
                                           FontSize="20"
                                           VerticalOptions="Center"
                                           Grid.Column="0"
                                           Margin="0,0,10,0" />

                                    <Entry x:Name="NewPasswordEntry"
                                           Placeholder="New Password"
                                           IsPassword="True"
                                           Grid.Column="1"
                                           TextColor="Black"
                                           VerticalOptions="Center"
                                           BackgroundColor="Transparent"
                                           TextChanged="OnNewPasswordTextChanged" />

                                    <Button x:Name="ShowNewPasswordButton"
                                            Text="👁"
                                            Grid.Column="2"
                                            BackgroundColor="Transparent"
                                            TextColor="{StaticResource SecondaryTextColor}"
                                            Clicked="OnToggleNewPasswordVisibility"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            Padding="0" />
                                </Grid>
                            </Border>

                            <!-- Confirm Password Entry -->
                            <Border Stroke="{StaticResource BorderColor}"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 0,0,10,10">
                                <Grid ColumnDefinitions="Auto,*,Auto" Padding="15,10">
                                    <Label Text="🔒"
                                           FontSize="20"
                                           VerticalOptions="Center"
                                           Grid.Column="0"
                                           Margin="0,0,10,0" />

                                    <Entry x:Name="ConfirmPasswordEntry"
                                           Placeholder="Confirm New Password"
                                           IsPassword="True"
                                           Grid.Column="1"
                                           TextColor="Black"
                                           VerticalOptions="Center"
                                           BackgroundColor="Transparent"
                                           TextChanged="OnConfirmPasswordTextChanged" />

                                    <Button x:Name="ShowConfirmPasswordButton"
                                            Text="👁"
                                            Grid.Column="2"
                                            BackgroundColor="Transparent"
                                            TextColor="{StaticResource SecondaryTextColor}"
                                            Clicked="OnToggleConfirmPasswordVisibility"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            Padding="0" />
                                </Grid>
                            </Border>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Password Requirements -->
                    <Frame Padding="15"
                           CornerRadius="8"
                           HasShadow="False"
                           BorderColor="{StaticResource BorderColor}"
                           BackgroundColor="#F5F7FA">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Password Requirements"
                                   FontAttributes="Bold"
                                   FontSize="14"
                                   TextColor="{StaticResource PrimaryTextColor}" />

                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="5">
                                <HorizontalStackLayout Grid.Row="0" Spacing="8">
                                    <Label x:Name="LengthCheckIcon" 
                                           Text="○" 
                                           FontSize="14"
                                           TextColor="{StaticResource SecondaryTextColor}"
                                           VerticalOptions="Center" />
                                    <Label Text="At least 8 characters"
                                           FontSize="13"
                                           TextColor="{StaticResource SecondaryTextColor}"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Grid.Row="1" Spacing="8">
                                    <Label x:Name="UppercaseCheckIcon" 
                                           Text="○" 
                                           FontSize="14"
                                           TextColor="{StaticResource SecondaryTextColor}"
                                           VerticalOptions="Center" />
                                    <Label Text="At least 1 uppercase letter"
                                           FontSize="13"
                                           TextColor="{StaticResource SecondaryTextColor}"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Grid.Row="2" Spacing="8">
                                    <Label x:Name="LowercaseCheckIcon" 
                                           Text="○" 
                                           FontSize="14"
                                           TextColor="{StaticResource SecondaryTextColor}"
                                           VerticalOptions="Center" />
                                    <Label Text="At least 1 lowercase letter"
                                           FontSize="13"
                                           TextColor="{StaticResource SecondaryTextColor}"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Grid.Row="3" Spacing="8">
                                    <Label x:Name="NumberCheckIcon" 
                                           Text="○" 
                                           FontSize="14"
                                           TextColor="{StaticResource SecondaryTextColor}"
                                           VerticalOptions="Center" />
                                    <Label Text="At least 1 number"
                                           FontSize="13"
                                           TextColor="{StaticResource SecondaryTextColor}"
                                           VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Password Match Status -->
                    <Label x:Name="PasswordMatchLabel"
                           Text=""
                           FontSize="14"
                           IsVisible="False"
                           HorizontalOptions="Center" />

                    <Button x:Name="ResetPasswordButton"
                            Text="Reset Password"
                            FontAttributes="Bold"
                            BackgroundColor="{StaticResource PrimaryColor}"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            IsEnabled="False"
                            Clicked="OnResetPasswordClicked" />
                </VerticalStackLayout>

                <!-- Success Message -->
                <VerticalStackLayout x:Name="SuccessStep"
                                     Spacing="20"
                                     IsVisible="False">

                    <Frame CornerRadius="50"
                           HeightRequest="100"
                           WidthRequest="100"
                           Padding="0"
                           BackgroundColor="{StaticResource PrimaryColor}"
                           HorizontalOptions="Center">
                        <Label Text="✓"
                               FontSize="48"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Frame>

                    <Label Text="Password Reset Successful!"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="{StaticResource PrimaryColor}"
                           HorizontalOptions="Center" />

                    <Label Text="Your password has been successfully reset. You can now sign in with your new password."
                           FontSize="16"
                           TextColor="{StaticResource SecondaryTextColor}"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap" />

                    <Button Text="Back to Sign In"
                            FontAttributes="Bold"
                            BackgroundColor="{StaticResource PrimaryColor}"
                            TextColor="White"
                            CornerRadius="25"
                            HeightRequest="50"
                            Clicked="OnBackToLoginClicked" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Footer -->
        <VerticalStackLayout Grid.Row="2" 
                             Spacing="10" 
                             Margin="0,20,0,0">
            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Remember your password? " 
                              TextColor="{StaticResource SecondaryTextColor}" />
                        <Span Text="Sign In" 
                              TextColor="{StaticResource PrimaryColor}" 
                              FontAttributes="Bold" />
                    </FormattedString>
                </Label.FormattedText>
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackToLoginClicked" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </Grid>
</ContentPage>