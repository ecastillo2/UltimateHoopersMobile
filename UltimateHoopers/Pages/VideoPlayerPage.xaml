<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="UltimateHoopers.Pages.VideoPlayerPage"
             Title="Video"
             BackgroundColor="Black">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Grid Grid.Row="0" 
              Padding="10"
              HeightRequest="60"
              BackgroundColor="#222222">

            <Label Text="Video"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Button Text="✕"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="20"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Clicked="OnCloseClicked" />
        </Grid>

        <!-- Video Content placeholder -->
        <Grid Grid.Row="1" BackgroundColor="#111111">
            <Image x:Name="thumbnailImage"
                   Aspect="AspectFit"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand" />

            <!-- Play Button -->
            <Frame BackgroundColor="#80000000"
                   CornerRadius="30"
                   HeightRequest="60"
                   WidthRequest="60"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   HasShadow="False">
                <Label Text="▶️"
                       FontSize="32"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="White" />
            </Frame>

            <Label x:Name="placeholderLabel"
                   Text="Video player is temporarily unavailable"
                   TextColor="White"
                   FontSize="16"
                   HorizontalOptions="Center"
                   VerticalOptions="End"
                   Margin="0,0,0,40" />
        </Grid>

        <!-- Caption -->
        <Grid Grid.Row="2"
              Padding="20,10"
              BackgroundColor="#222222">
            <Label x:Name="captionLabel"
                   TextColor="White"
                   LineBreakMode="TailTruncation"
                   MaxLines="2" />
        </Grid>
    </Grid>
</ContentPage>