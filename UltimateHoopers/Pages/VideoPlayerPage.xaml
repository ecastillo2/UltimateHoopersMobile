<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="UltimateHoopers.Pages.VideoPlayerPage"
             Title="Video"
             BackgroundColor="Black">

    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Header with Close Button -->
            <Grid Grid.Row="0" 
                  Padding="10"
                  HeightRequest="60">

                <Label Text="{Binding UserName, StringFormat='Video by {0}'}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />

                <Button Text="✕"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="18"
                        WidthRequest="40"
                        HeightRequest="40"
                        CornerRadius="20"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        Clicked="OnCloseClicked" />
            </Grid>

            <!-- Video Content - Using WebView -->
            <Grid Grid.Row="1">
                <WebView x:Name="videoWebView" 
                         HorizontalOptions="FillAndExpand"
                         VerticalOptions="FillAndExpand"
                         Navigated="VideoWebView_Navigated"
                         Navigating="VideoWebView_Navigating" />

                <!-- Fallback for when WebView is not showing -->
                <Grid x:Name="fallbackGrid" 
                      BackgroundColor="#111111" 
                      IsVisible="True">

                    <!-- Loading Indicator -->
                    <ActivityIndicator x:Name="loadingIndicator"
                                      IsRunning="True"
                                      Color="White"
                                      Scale="1.5"
                                      IsVisible="False"
                                      HorizontalOptions="Center"
                                      VerticalOptions="Center" />

                    <Image x:Name="thumbnailImage"
                           Aspect="AspectFit"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="FillAndExpand" />

                    <!-- Play Button -->
                    <Frame x:Name="playButtonFrame"
                           BackgroundColor="#80000000"
                           CornerRadius="30"
                           HeightRequest="60"
                           WidthRequest="60"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           HasShadow="False">
                        <Label Text="▶️"
                               FontSize="32"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               TextColor="White" />

                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPlayButtonTapped" />
                        </Frame.GestureRecognizers>
                    </Frame>
                </Grid>
            </Grid>

            <!-- Social Controls Bottom -->
            <Grid Grid.Row="2"
                  Padding="20,10"
                  BackgroundColor="#222222"
                  ColumnDefinitions="Auto,*,Auto,Auto,Auto">

                <!-- Like Button -->
                <Label Grid.Column="0" 
                       Text="{Binding LikedPost, Converter={StaticResource LikedPostToHeartConverter}}" 
                       FontSize="24" 
                       Margin="0,0,20,0"
                       TextColor="White">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLikeClicked" />
                    </Label.GestureRecognizers>
                </Label>

                <!-- Caption -->
                <Label Grid.Column="1"
                       x:Name="captionLabel"
                       TextColor="White"
                       LineBreakMode="TailTruncation"
                       MaxLines="2"
                       FontSize="14"
                       VerticalOptions="Center" />

                <!-- Comments -->
                <Label Grid.Column="2" 
                       Text="💬" 
                       FontSize="24" 
                       Margin="0,0,15,0"
                       TextColor="White">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCommentsClicked" />
                    </Label.GestureRecognizers>
                </Label>

                <!-- Share -->
                <Label Grid.Column="3" 
                       Text="📩" 
                       FontSize="24"
                       Margin="0,0,15,0"
                       TextColor="White">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnShareClicked" />
                    </Label.GestureRecognizers>
                </Label>

                <!-- Save -->
                <Label Grid.Column="4" 
                       Text="{Binding SavedPost, Converter={StaticResource SavedPostToBookmarkConverter}}" 
                       FontSize="24" 
                       TextColor="White">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSaveClicked" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>