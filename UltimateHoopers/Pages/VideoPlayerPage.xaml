<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:mediaElement="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui.MediaElement"
             x:Class="UltimateHoopers.Pages.VideoPlayerPage"
             xmlns:viewmodels="clr-namespace:UltimateHoopers.ViewModels"
             Title="Video"
             BackgroundColor="Black">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Grid Grid.Row="0" 
              Padding="10"
              HeightRequest="60"
              BackgroundColor="#222222">

            <Label Text="Video"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Button Text="✕"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="20"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Clicked="OnCloseClicked" />
        </Grid>

        <!-- Video Content -->
        <mediaElement:MediaElement
            x:Name="mediaElement"
            Grid.Row="1"
            ShouldShowPlaybackControls="True"
            ShouldLoopPlayback="False"
            ShouldMute="False"
            ShouldKeepScreenOn="True"
            MediaOpened="OnMediaOpened"
            MediaEnded="OnMediaEnded"
            MediaFailed="OnMediaFailed"
            PositionChanged="OnPositionChanged"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand" />

        <!-- Player Controls -->
        <Grid Grid.Row="2"
              Padding="20,10"
              BackgroundColor="#222222"
              RowDefinitions="Auto,Auto"
              RowSpacing="10">

            <!-- Caption -->
            <Label Grid.Row="0"
                   x:Name="captionLabel"
                   TextColor="White"
                   LineBreakMode="TailTruncation"
                   MaxLines="2" />

            <!-- Progress Bar -->
            <Grid Grid.Row="1" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                <Label Grid.Column="0"
                       x:Name="currentTimeLabel"
                       Text="0:00"
                       TextColor="White"
                       FontSize="12" />

                <Slider Grid.Column="1"
                        x:Name="progressSlider"
                        Minimum="0"
                        Maximum="100"
                        ValueChanged="OnSliderValueChanged"
                        MinimumTrackColor="{StaticResource PrimaryColor}"
                        MaximumTrackColor="Gray"
                        ThumbColor="{StaticResource PrimaryColor}" />

                <Label Grid.Column="2"
                       x:Name="totalTimeLabel"
                       Text="0:00"
                       TextColor="White"
                       FontSize="12" />
            </Grid>
        </Grid>
    </Grid>
</ContentPage>