                                        </div>
                                        <div class="card-body">
                                            <div class="row text-center g-3 mt-4">
                                                <div class="col-4">
                                                    <div class="border rounded p-3">
                                                        <h3 class="mb-1 fs-5" id="videoInfoViews">0</h3>
                                                        <p class="mb-0 small text-muted">Views</p>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="border rounded p-3">
                                                        <h3 class="mb-1 fs-5" id="videoInfoDownloads">0</h3>
                                                        <p class="mb-0 small text-muted">Downloads</p>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="border rounded p-3">
                                                        <h3 class="mb-1 fs-5" id="videoInfoRating">0</h3>
                                                        <p class="mb-0 small text-muted">Rating</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Media Tab -->
                    <div class="tab-pane fade" id="video-media-tab-pane" role="tabpanel">
                        <div class="mt-4">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-header d-flex justify-content-between align-items-center">
                                            <h5 class="mb-0">Video Player</h5>
                                            <div class="btn-group btn-group-sm">
