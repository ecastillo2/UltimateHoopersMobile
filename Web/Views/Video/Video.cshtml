@model Website.ViewModels.VideosViewModel

@{
    ViewData["Title"] = "Videos";
    var userType = ViewData["UserType"]?.ToString() ?? "Admin";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/management.css">
    <style>
        .modal-loading-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.9);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1060;
        }

        .video-thumbnail {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid #dee2e6;
        }

        .video-initials {
            width: 40px;
            height: 40px;
            background-color: var(--secondary-color);
            color: white;
            border-radius: 8px;
            font-weight: bold;
            font-size: 14px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .video-preview-container {
            border: 2px dashed #dee2e6;
            border-radius: 10px;
            transition: all 0.3s ease;
            position: relative;
        }

            .video-preview-container.has-video {
                border: 2px solid var(--primary-color, #007bff) !important;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
                background: linear-gradient(135deg, rgba(0, 123, 255, 0.05) 0%, rgba(0, 123, 255, 0.1) 100%);
            }

        #currentVideo, #newVideo, #addPreviewVideo {
            max-width: 100%;
            max-height: 180px;
            object-fit: cover;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            #currentVideo:hover, #newVideo:hover, #addPreviewVideo:hover {
                transform: scale(1.02);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
            }

        #addVideoPlaceholder {
            transition: all 0.3s ease;
            cursor: pointer;
        }

            #addVideoPlaceholder:hover {
                background-color: rgba(0, 123, 255, 0.05);
            }

        #addVideoFile, #addVideoURL {
            transition: all 0.3s ease;
            border-radius: 8px;
        }

            #addVideoFile:focus, #addVideoURL:focus {
                border-color: var(--primary-color, #007bff);
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
                outline: none;
            }

        .drag-over {
            border-color: var(--primary-color, #007bff) !important;
            background-color: rgba(0, 123, 255, 0.05) !important;
            transform: scale(1.02);
        }

        .btn-orange {
            background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 4px rgba(255, 107, 53, 0.3);
        }

            .btn-orange:hover {
                background: linear-gradient(135deg, #e55a2b 0%, #e8851a 100%);
                color: white;
                transform: translateY(-1px);
                box-shadow: 0 4px 8px rgba(255, 107, 53, 0.4);
            }

            .btn-orange:active {
                transform: translateY(0);
                box-shadow: 0 2px 4px rgba(255, 107, 53, 0.3);
            }

        #clearAddVideo {
            border-radius: 6px;
            transition: all 0.3s ease;
        }

            #clearAddVideo:hover {
                background-color: #6c757d;
                border-color: #6c757d;
                color: white;
                transform: translateY(-1px);
            }

        .is-invalid {
            border-color: #dc3545 !important;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
            animation: shake 0.5s ease-in-out;
        }

        .is-valid {
            border-color: #28a745 !important;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25) !important;
        }

        @@keyframes shake {
            0%, 100%

        {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        75% {
            transform: translateX(5px);
        }

        }
    </style>
}

<div class="dashboard-header">
    <div class="container">
        <h1>Videos</h1>
        <p class="lead">Manage videos, upload to cloud storage, and track content</p>
    </div>
</div>

<div class="container">
    <!-- Back button to dashboard -->
    <div class="back-button">
        <a href="@Url.Action("Dashboard", "Dashboard")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <!-- Video Filters -->
    <div class="mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Filter Videos</h5>
                    <button class="btn btn-sm btn-outline-secondary" id="resetFilters">
                        <i class="bi bi-arrow-counterclockwise me-1"></i>
                        Reset Filters
                    </button>
                </div>

                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="statusFilter" class="form-label">Status</label>
                        <select class="form-select" id="statusFilter">
                            <option value="all" selected>All Statuses</option>
                            <option value="active">Active</option>
                            <option value="inactive">Inactive</option>
                            <option value="archived">Archived</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="clientFilter" class="form-label">Client</label>
                        <select class="form-select" id="clientFilter">
                            <option value="all" selected>All Clients</option>
                            <option value="client1">Client 1</option>
                            <option value="client2">Client 2</option>
                            <option value="client3">Client 3</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="dateFilter" class="form-label">Upload Date</label>
                        <select class="form-select" id="dateFilter">
                            <option value="all" selected>All Dates</option>
                            <option value="today">Today</option>
                            <option value="this-week">This Week</option>
                            <option value="this-month">This Month</option>
                            <option value="this-year">This Year</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="durationFilter" class="form-label">Duration</label>
                        <select class="form-select" id="durationFilter">
                            <option value="all" selected>All Durations</option>
                            <option value="short">Short (< 5 min)</option>
                            <option value="medium">Medium (5-20 min)</option>
                            <option value="long">Long (> 20 min)</option>
                        </select>
                    </div>
                </div>

                <div class="mt-3" id="activeFilters">
                    <span class="badge bg-secondary me-2">Active Filters:</span>
                    <span class="text-muted filter-none">None</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12 text-end">
            <button type="button" class="btn btn-orange" data-bs-toggle="modal" data-bs-target="#addVideoModal">
                <i class="bi bi-plus-circle me-2"></i>Add Video
            </button>
        </div>
    </div>

    <!-- DataTable -->
    @if (Model?.VideoList != null && Model.VideoList.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <table id="videosTable" class="table table-striped table-hover w-100">
                    <thead>
                        <tr>
                            <th>Video</th>
                            <th>Upload Date</th>
                            <th>Status</th>
                            <th>Client</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var video in Model.VideoList)
                        {
                            <tr data-status="@(video.Video.Status?.ToLower() ?? "active")"
                                data-video-date="@(video.Video.VideoDate?.ToString("yyyy-MM-dd") ?? "")"
                                data-created-date="@(video.Video.CreatedDate?.ToString("yyyy-MM-dd") ?? "")"
                                data-client-id="@(video.Video.ClientId ?? "")"
                                data-video-url="@video.Video.VideoURL"
                                data-thumbnail-url="@video.Video.VideoThumbnail"
                                data-video-id="@video.Video.VideoId"
                                data-video-title="@video.Video.Title"
                                data-video-number="@video.Video.VideoNumber"
                                data-video-name="@video.Video.VideoName">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="video-thumbnail-cell me-3">
                                            @if (!string.IsNullOrEmpty(video.Video.VideoThumbnail))
                                            {
                                                <img src="@video.Video.VideoThumbnail" alt="@video.Video.Title" class="video-thumbnail"
                                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                                                     loading="lazy">
                                                <div class="video-initials" style="display: none;">
                                                    <i class="bi bi-play-fill"></i>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="video-initials">
                                                    <i class="bi bi-play-fill"></i>
                                                </div>
                                            }
                                        </div>
                                        <div>
                                            <div class="fw-semibold video-title">@video.Video.Title</div>
                                            <div class="text-muted small video-number">#@(video.Video.VideoNumber)</div>
                                            @if (!string.IsNullOrEmpty(video.Video.VideoName))
                                            {
                                                <div class="text-muted small">@video.Video.VideoName</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="video-date">
                                    @if (video.Video.VideoDate.HasValue)
                                    {
                                        @video.Video.VideoDate.Value.ToString("MM/dd/yyyy")
                                    }
                                    else if (video.Video.CreatedDate.HasValue)
                                    {
                                        @video.Video.CreatedDate.Value.ToString("MM/dd/yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">--</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-success badge-pill video-status">@(video.Video.Status ?? "Active")</span>
                                </td>
                                <td class="video-client">@(video.Video.ClientId ?? "N/A")</td>
                                <td>
                                    <div class="table-actions">
                                        <button type="button" class="btn btn-sm btn-outline-primary action-icon"
                                                data-bs-toggle="modal"
                                                data-bs-target="#editVideoModal"
                                                data-video-id="@video.Video.VideoId"
                                                title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <a href="@Url.Action("Details", "Video", new { id = video.Video.VideoId })"
                                           class="btn btn-sm btn-primary action-icon" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (!string.IsNullOrEmpty(video.Video.VideoURL))
                                        {
                                            <a href="@video.Video.VideoURL" target="_blank"
                                               class="btn btn-sm btn-success action-icon" title="Play Video">
                                                <i class="bi bi-play-fill"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="no-videos-message">
            <i class="bi bi-camera-video" style="font-size: 3rem; color: var(--secondary-color);"></i>
            <h3 class="mt-3">No Videos Found</h3>
            <p class="text-muted">There are no videos available at the moment. Add a new video to get started!</p>
            <button type="button" class="btn btn-orange mt-3" data-bs-toggle="modal" data-bs-target="#addVideoModal">
                <i class="bi bi-plus-circle me-2"></i>Add Video
            </button>
        </div>
    }
</div>

<!-- Add Video Modal -->
<div class="modal fade" id="addVideoModal" tabindex="-1" aria-labelledby="addVideoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addVideoModalLabel">Add New Video</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addVideoForm" method="post" action="/Video/Create" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-body">

                    <!-- Video Upload Section -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <label class="form-label fw-bold">Video File <span class="text-danger">*</span></label>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="video-preview-container mb-3">
                                        <div id="addVideoPreview" class="current-video-preview border rounded p-3 text-center" style="min-height: 200px; background-color: #f8f9fa;">
                                            <video id="addPreviewVideo" src="" controls class="img-fluid rounded" style="max-height: 180px; display: none;"></video>
                                            <div id="addVideoPlaceholder" class="d-flex flex-column align-items-center justify-content-center h-100">
                                                <i class="bi bi-camera-video text-muted" style="font-size: 3rem;"></i>
                                                <p class="text-muted mt-2 mb-0">Video Preview</p>
                                                <small class="text-muted">No video selected</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="mb-3">
                                        <label for="addVideoFile" class="form-label">Upload Video</label>
                                        <input type="file" class="form-control" id="addVideoFile" name="VideoFile" accept="video/*">
                                        <div class="form-text">Supported: MP4, WebM, AVI, MOV. Max size: 100MB</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="addVideoURL" class="form-label">Or Video URL</label>
                                        <input type="url" class="form-control" id="addVideoURL" name="VideoURL" placeholder="https://example.com/video.mp4">
                                        <div class="form-text">Provide a direct link to the video file</div>
                                    </div>
                                    <div class="mb-2">
                                        <button type="button" class="btn btn-outline-secondary btn-sm" id="clearAddVideo">
                                            <i class="bi bi-x-circle me-1"></i>Clear Video
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Basic Video Information -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="addTitle" class="form-label">Video Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="addTitle" name="Title" required maxlength="100">
                            <div class="form-text">Required. Maximum 100 characters.</div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="addVideoName" class="form-label">Video Name</label>
                            <input type="text" class="form-control" id="addVideoName" name="VideoName" placeholder="Enter video file name..." maxlength="100">
                            <div class="form-text">Optional. If not provided, will use the video title.</div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="addClientId" class="form-label">Client ID</label>
                            <input type="text" class="form-control" id="addClientId" name="ClientId" placeholder="Enter client ID...">
                            <div class="form-text">Optional. Associate this video with a specific client.</div>
                        </div>
                        <div class="col-md-6">
                            <label for="addVideoDate" class="form-label">Video Date</label>
                            <input type="date" class="form-control" id="addVideoDate" name="VideoDate">
                            <div class="form-text">Optional. Defaults to today's date.</div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="addStatus" class="form-label">Status</label>
                            <select class="form-select" id="addStatus" name="Status">
                                <option value="Active" selected>Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="Archived">Archived</option>
                            </select>
                        </div>
                    </div>

                    <!-- Progress indicator (hidden by default) -->
                    <div id="uploadProgress" class="row mb-3" style="display: none;">
                        <div class="col-md-12">
                            <label class="form-label">Upload Progress</label>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%"></div>
                            </div>
                            <small class="text-muted">Uploading video...</small>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-orange">
                        <i class="bi bi-cloud-upload me-2"></i>Upload Video
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Video Modal -->
<div class="modal fade" id="editVideoModal" tabindex="-1" aria-labelledby="editVideoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editVideoModalLabel">Edit Video</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs" id="editVideoTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="video-details-tab" data-bs-toggle="tab" data-bs-target="#video-details-tab-pane" type="button" role="tab">Video Details</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="video-info-tab" data-bs-toggle="tab" data-bs-target="#video-info-tab-pane" type="button" role="tab">Video Info</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="video-media-tab" data-bs-toggle="tab" data-bs-target="#video-media-tab-pane" type="button" role="tab">Media</button>
                    </li>
                </ul>
                <div class="tab-content" id="editVideoTabContent">
                    <!-- Video Details Tab -->
                    <div class="tab-pane fade show active" id="video-details-tab-pane" role="tabpanel">
                        <form id="editVideoForm" method="post" action="@Url.Action("Edit", "Video")" enctype="multipart/form-data" class="mt-4">
                            @Html.AntiForgeryToken()
                            <input type="hidden" id="editVideoId" name="VideoId" value="" />

                            <!-- Video File Section -->
                            <div class="row mb-4">
                                <div class="col-md-12">
                                    <label class="form-label fw-bold">Video File</label>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="video-preview-container mb-3">
                                                <div id="currentVideoPreview" class="current-video-preview border rounded p-3 text-center" style="min-height: 200px; background-color: #f8f9fa;">
                                                    <video id="currentVideo" src="" controls class="img-fluid rounded" style="max-height: 180px; display: none;"></video>
                                                    <div id="currentVideoPlaceholder" class="d-flex flex-column align-items-center justify-content-center h-100">
                                                        <i class="bi bi-camera-video text-muted" style="font-size: 3rem;"></i>
                                                        <p class="text-muted mt-2 mb-0">Current Video</p>
                                                        <small class="text-muted">No video uploaded</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="mb-3">
                                                <label for="editVideoFile" class="form-label">Upload New Video</label>
                                                <input type="file" class="form-control" id="editVideoFile" name="VideoFile" accept="video/*">
                                                <div class="form-text">Supported: MP4, WebM, AVI, MOV. Max size: 100MB</div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="editVideoURL" class="form-label">Or Video URL</label>
                                                <input type="url" class="form-control" id="editVideoURL" name="VideoURL" placeholder="https://example.com/video.mp4">
                                                <div class="form-text">Provide a direct link to the video file</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Basic Video Information -->
                            <div class="row mb-3">
                                <div class="col-md-8">
                                    <label for="editTitle" class="form-label">Video Title <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="editTitle" name="Title" required>
                                </div>
                                <div class="col-md-4">
                                    <label for="editVideoNumber" class="form-label">Video Number</label>
                                    <input type="text" class="form-control bg-light text-muted" id="editVideoNumber" name="VideoNumber" readonly tabindex="-1" onfocus="this.blur()">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <label for="editVideoName" class="form-label">Video Name</label>
                                    <input type="text" class="form-control" id="editVideoName" name="VideoName">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="editClientId" class="form-label">Client ID</label>
                                    <input type="text" class="form-control" id="editClientId" name="ClientId">
                                </div>
                                <div class="col-md-6">
                                    <label for="editVideoDate" class="form-label">Video Date</label>
                                    <input type="date" class="form-control" id="editVideoDate" name="VideoDate">
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="editStatus" class="form-label">Status</label>
                                    <select class="form-select" id="editStatus" name="Status">
                                        <option value="Active">Active</option>
                                        <option value="Inactive">Inactive</option>
                                        <option value="Archived">Archived</option>
                                    </select>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-danger me-auto" id="deleteVideoBtn">Delete Video</button>
                                <button type="submit" class="btn btn-orange">Save Changes</button>
                            </div>
                        </form>
                    </div>

                    <!-- Video Info Tab -->
                    <div class="tab-pane fade" id="video-info-tab-pane" role="tabpanel">
                        <div class="mt-4">
                            <div class="text-center mb-4">
                                <div class="rounded-circle bg-navy text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 100px; height: 100px; font-size: 2.5rem;" id="videoInfoAvatar">
                                    <span id="videoInfoInitials">--</span>
                                </div>
                                <h4 class="mb-1" id="videoInfoTitle">--</h4>
                                <p class="text-muted" id="videoInfoNumber">--</p>
                                <div class="d-flex justify-content-center gap-2 mb-2">
                                    <span class="badge bg-primary" id="videoInfoStatus">--</span>
                                    <span class="badge bg-secondary" id="videoInfoClient">--</span>
                                </div>
                            </div>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="card h-100">
                                        <div class="card-header bg-white">
                                            <h5 class="card-title mb-0">Video Information</h5>
                                        </div>
                                        <div class="card-body">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item d-flex justify-content-between px-0">
                                                    <span class="text-muted">Title:</span>
                                                    <span id="videoInfoTitleDetail">--</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between px-0">
                                                    <span class="text-muted">Video Name:</span>
                                                    <span id="videoInfoVideoName">--</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between px-0">
                                                    <span class="text-muted">Upload Date:</span>
                                                    <span id="videoInfoDate">--</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between px-0">
                                                    <span class="text-muted">Client:</span>
                                                    <span id="videoInfoClientDetail">--</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between px-0">
                                                    <span class="text-muted">File Size:</span>
