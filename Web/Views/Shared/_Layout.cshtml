@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject Website.Services.AuthenticationService AuthService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ultimate Hoopers</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/signup-modal.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow sticky-top">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-dribbble text-orange me-2"></i>
                    <span class="fw-bold">Ultimate Hoopers</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        @if (AuthService.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a>
                            </li>

                            @if (AuthService.IsAdmin)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Client" asp-action="Client">Clients</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="User" asp-action="User">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Run" asp-action="Run">Runs</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/#features">Features</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/#download">Download</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Blog">Blog</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                       
                    </ul>
                    <div class="d-flex">
                        @if (AuthService.IsAuthenticated)
                        {
                            <div class="dropdown me-2">
                                <button class="btn btn-outline-primary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i> @AuthService.GetUserName()
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#loginModal">
                                <i class="bi bi-person me-1"></i> Login
                            </button>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Login/Signup Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header modal-header-navy">
                    <h5 class="modal-title" id="loginModalLabel">Log in to Ultimate Hoopers</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Login Form Container -->
                    <div id="loginFormContainer">
                        <ul class="nav nav-tabs" id="loginTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="client-tab" data-bs-toggle="tab" data-bs-target="#client-login" type="button" role="tab" aria-controls="client-login" aria-selected="true">Client</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="admin-tab" data-bs-toggle="tab" data-bs-target="#admin-login" type="button" role="tab" aria-controls="admin-login" aria-selected="false">Admin</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="loginTabsContent">
                            <div class="tab-pane fade show active" id="client-login" role="tabpanel" aria-labelledby="client-tab">
                                <form asp-controller="Account" asp-action="ClientLogin" method="post">
                                    <input type="hidden" name="returnUrl" id="clientReturnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                    <div class="mb-3 mt-3">
                                        <label for="clientEmail" class="form-label">Email Address</label>
                                        <input type="email" class="form-control" id="clientEmail" name="email" required>
                                        <div class="form-text">Demo: any email, password: client123</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="clientPassword" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="clientPassword" name="password" required>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="rememberMe" value="true" id="rememberClientCheck">
                                            <label class="form-check-label" for="rememberClientCheck">
                                                Remember me for 30 days
                                            </label>
                                        </div>
                                        <a href="#" class="text-orange" onclick="handleForgotPassword()" role="button">Forgot password?</a>
                                    </div>
                                    <button type="submit" class="btn btn-orange w-100">Login as Client</button>
                                </form>
                            </div>
                            <div class="tab-pane fade" id="admin-login" role="tabpanel" aria-labelledby="admin-tab">
                                <form asp-controller="Account" asp-action="AdminLogin" method="post">
                                    <input type="hidden" name="returnUrl" id="adminReturnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                    <div class="mb-3 mt-3">
                                        <label for="adminEmail" class="form-label">Email Address</label>
                                        <input type="email" class="form-control" id="adminEmail" name="email" required>
                                        <div class="form-text">Demo: any email, password: admin123</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="adminPassword" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="adminPassword" name="password" required>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="rememberMe" value="true" id="rememberAdminCheck">
                                            <label class="form-check-label" for="rememberAdminCheck">
                                                Remember me for 30 days
                                            </label>
                                        </div>
                                        <a href="#" class="text-navy" onclick="handleForgotPassword()" role="button">Forgot password?</a>
                                    </div>
                                    <button type="submit" class="btn btn-navy w-100">Login as Admin</button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Signup Form Container -->
                    <div id="signupFormContainer" style="display: none;">
                        <ul class="nav nav-tabs" id="signupTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="signup-client-tab" data-bs-toggle="tab" data-bs-target="#client-signup" type="button" role="tab" aria-controls="client-signup" aria-selected="true">Client</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="signupTabsContent">
                            <div class="tab-pane fade show active" id="client-signup" role="tabpanel" aria-labelledby="signup-client-tab">
                                <form asp-controller="Account" asp-action="ClientSignup" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3 mt-3">
                                                <label for="clientSignupFirstName" class="form-label">First Name <span class="text-danger">*</span></label>
                                                <input type="text" class="form-control" id="clientSignupFirstName" name="firstName" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3 mt-3">
                                                <label for="clientSignupLastName" class="form-label">Last Name <span class="text-danger">*</span></label>
                                                <input type="text" class="form-control" id="clientSignupLastName" name="lastName" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="clientSignupEmail" class="form-label">Email Address <span class="text-danger">*</span></label>
                                        <input type="email" class="form-control" id="clientSignupEmail" name="email" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="clientSignupPhone" class="form-label">Phone Number</label>
                                        <input type="tel" class="form-control" id="clientSignupPhone" name="phone">
                                    </div>
                                    <div class="mb-3">
                                        <label for="clientSignupPassword" class="form-label">Password <span class="text-danger">*</span></label>
                                        <input type="password" class="form-control" id="clientSignupPassword" name="password" required minlength="6">
                                        <div class="form-text">Minimum 6 characters</div>
                                    </div>
                                    <div class="mb-3">
                                        <label for="clientSignupConfirmPassword" class="form-label">Confirm Password <span class="text-danger">*</span></label>
                                        <input type="password" class="form-control" id="clientSignupConfirmPassword" name="confirmPassword" required>
                                    </div>
                                    <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="clientSignupTerms" name="acceptTerms" required>
                                        <label class="form-check-label" for="clientSignupTerms">
                                            I agree to the <a href="#" class="text-orange">Terms of Service</a> and <a href="#" class="text-orange">Privacy Policy</a> <span class="text-danger">*</span>
                                        </label>
                                    </div>
                                    <button type="submit" class="btn btn-orange w-100">Create Client Account</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div id="loginFooter" class="w-100 text-center">
                        <p class="mb-0">Don't have a Client account? <a href="#" class="text-orange" id="showSignupForm">Sign up</a></p>
                    </div>
                    <div id="signupFooter" class="w-100 text-center" style="display: none;">
                        <p class="mb-0">Already have an account? <a href="#" class="text-orange" id="showLoginForm">Sign in</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/signup-modal.js" asp-append-version="true"></script>

    <script>
        // Handle URL hash for login modal
        document.addEventListener('DOMContentLoaded', function() {
            if (window.location.hash === '#login') {
                const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
                loginModal.show();
            }

            // Check if there's a scrollTo parameter in the URL
            const urlParams = new URLSearchParams(window.location.search);
            const scrollTo = urlParams.get('scrollTo');
            if (scrollTo === 'login') {
                const loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
                loginModal.show();
            }
        });

        // Forgot password handler
        function handleForgotPassword() {
            console.log('Forgot password clicked');
            
            // Close the login modal first
            const loginModal = document.getElementById('loginModal');
            if (loginModal) {
                const modalInstance = bootstrap.Modal.getInstance(loginModal);
                if (modalInstance) {
                    modalInstance.hide();
                }
            }
            
            // Navigate to forgot password page after modal closes
            setTimeout(() => {
                console.log('Navigating to forgot password page');
                window.location.href = '/Account/ForgotPassword';
            }, 300);
        }

        // Enhanced remember me functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Add enhanced remember me information
            const rememberMeLabels = document.querySelectorAll('label[for*="remember"]');
            rememberMeLabels.forEach(label => {
                const checkbox = document.getElementById(label.getAttribute('for'));
                if (checkbox) {
                    // Add tooltip or help text
                    label.setAttribute('title', 'Keep me signed in for 30 days on this device');
                    
                    // Add visual feedback when checked
                    checkbox.addEventListener('change', function() {
                        if (this.checked) {
                            label.style.fontWeight = 'bold';
                            label.style.color = '#342580';
                        } else {
                            label.style.fontWeight = 'normal';
                            label.style.color = '';
                        }
                    });
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>