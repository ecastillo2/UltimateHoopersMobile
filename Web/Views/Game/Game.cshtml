@model Website.ViewModels.GamesViewModel

@{
    ViewData["Title"] = "Games";
    var userType = ViewData["UserType"]?.ToString() ?? "Admin";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/management.css">
    <style>
        .modal-loading-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.9);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1060;
        }

        .game-icon {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid #dee2e6;
            background-color: var(--primary-color);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
        }

        .btn-orange {
            background: linear-gradient(135deg, #ff6b35 0%, #f7931e 100%);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 4px rgba(255, 107, 53, 0.3);
        }

            .btn-orange:hover {
                background: linear-gradient(135deg, #e55a2b 0%, #e8851a 100%);
                color: white;
                transform: translateY(-1px);
                box-shadow: 0 4px 8px rgba(255, 107, 53, 0.4);
            }

        .is-invalid {
            border-color: #dc3545 !important;
            box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25) !important;
            animation: shake 0.5s ease-in-out;
        }

        .is-valid {
            border-color: #28a745 !important;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25) !important;
        }

        @@keyframes shake {
            0%, 100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-5px);
            }

            75% {
                transform: translateX(5px);
            }
        }

        .game-status-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }

        .game-details {
            max-width: 300px;
        }
    </style>
}

<div class="dashboard-header">
    <div class="container">
        <h1>Games</h1>
        <p class="lead">Manage basketball games, track scores, and monitor player participation</p>
    </div>
</div>

<div class="container">
    <!-- Back button to dashboard -->
    <div class="back-button">
        <a href="@Url.Action("Dashboard", "Dashboard")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <!-- Game Filters -->
    <div class="mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Filter Games</h5>
                    <button class="btn btn-sm btn-outline-secondary" id="resetFilters">
                        <i class="bi bi-arrow-counterclockwise me-1"></i>
                        Reset Filters
                    </button>
                </div>

                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="statusFilter" class="form-label">Status</label>
                        <select class="form-select" id="statusFilter">
                            <option value="all" selected>All Statuses</option>
                            <option value="scheduled">Scheduled</option>
                            <option value="in-progress">In Progress</option>
                            <option value="completed">Completed</option>
                            <option value="cancelled">Cancelled</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="dateFilter" class="form-label">Date</label>
                        <select class="form-select" id="dateFilter">
                            <option value="all" selected>All Dates</option>
                            <option value="today">Today</option>
                            <option value="this-week">This Week</option>
                            <option value="this-month">This Month</option>
                            <option value="upcoming">Upcoming</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="courtFilter" class="form-label">Court</label>
                        <select class="form-select" id="courtFilter">
                            <option value="all" selected>All Courts</option>
                            <option value="main-court">Main Court</option>
                            <option value="practice-court">Practice Court</option>
                            <option value="outdoor-court">Outdoor Court</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="clientFilter" class="form-label">Client</label>
                        <select class="form-select" id="clientFilter">
                            <option value="all" selected>All Clients</option>
                        </select>
                    </div>
                </div>

                <div class="mt-3" id="activeFilters">
                    <span class="badge bg-secondary me-2">Active Filters:</span>
                    <span class="text-muted filter-none">None</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12 text-end">
            <button type="button" class="btn btn-orange" data-bs-toggle="modal" data-bs-target="#addGameModal">
                <i class="bi bi-plus-circle me-2"></i>Create Game
            </button>
        </div>
    </div>

    <!-- DataTable -->
    @if (Model?.GameList != null && Model.GameList.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <table id="gamesTable" class="table table-striped table-hover w-100">
                    <thead>
                        <tr>
                            <th>Game</th>
                            <th>Date & Time</th>
                            <th>Court</th>
                            <th>Players</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var game in Model.GameList)
                        {
                            <tr data-status="@(game.Status?.ToLower() ?? "scheduled")"
                                data-court-id="@game.CourtId"
                                data-client-id="@game.ClientId"
                                data-run-id="@game.RunId"
                                data-game-id="@game.GameId"
                                data-game-number="@game.GameNumber"
                                data-created-date="@game.CreatedDate?.ToString("yyyy-MM-dd")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="game-icon me-3">
                                            <i class="bi bi-dribbble"></i>
                                        </div>
                                        <div class="game-details">
                                            <div class="fw-semibold game-title">Game #@(game.GameNumber)</div>
                                            @* <div class="text-muted small game-id">ID: @(game.GameId)</div> *@
                                            @if (game.Run != null)
                                            {
                                                <div class="text-muted small">Run: @game.Run.Name</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="game-date">
                                    @if (game.CreatedDate.HasValue)
                                    {
                                        <div class="fw-semibold">@game.CreatedDate.Value.ToString("MMM dd, yyyy")</div>
                                        <div class="text-muted small">@game.CreatedDate.Value.ToString("h:mm tt")</div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not scheduled</span>
                                    }
                                </td>
                                <td class="game-court">
                                    @if (game.Court != null)
                                    {
                                        <span>@game.Court.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No court assigned</span>
                                    }
                                </td>
                                <td class="game-players">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-people me-1"></i>
                                        <span>@(game.ProfileList?.Count ?? 0)</span>
                                        @if (game.Run != null && game.Run.PlayerLimit.HasValue)
                                        {
                                            <span class="text-muted">/@game.Run.PlayerLimit</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <span class="badge game-status-badge @GetStatusBadgeClass(game.Status)">
                                        @(game.Status ?? "Scheduled")
                                    </span>
                                </td>
                                <td>
                                    <div class="table-actions">
                                        <button type="button" class="btn btn-sm btn-outline-primary action-icon"
                                                data-bs-toggle="modal"
                                                data-bs-target="#editGameModal"
                                                data-game-id="@game.GameId"
                                                title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <a href="@Url.Action("Details", "Game", new { id = game.GameId })"
                                           class="btn btn-sm btn-primary action-icon" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-success action-icon"
                                                onclick="startGame('@game.GameId')" title="Start Game">
                                            <i class="bi bi-play"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="no-games-message">
            <i class="bi bi-dribbble" style="font-size: 3rem; color: var(--secondary-color);"></i>
            <h3 class="mt-3">No Games Found</h3>
            <p class="text-muted">There are no games scheduled at the moment. Create a new game to get started!</p>
            <button type="button" class="btn btn-orange mt-3" data-bs-toggle="modal" data-bs-target="#addGameModal">
                <i class="bi bi-plus-circle me-2"></i>Create Game
            </button>
        </div>
    }
</div>

<!-- Add Game Modal -->
<div class="modal fade" id="addGameModal" tabindex="-1" aria-labelledby="addGameModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addGameModalLabel">Create New Game</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addGameForm" method="post" action="@Url.Action("Create", "Game")" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <!-- Run Selection -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="addRunId" class="form-label">Associated Run <span class="text-danger">*</span></label>
                            <select class="form-select" id="addRunId" name="RunId" required>
                                <option value="">Select a run...</option>
                                <!-- This should be populated from the controller -->
                            </select>
                            <div class="form-text">Select the run this game is associated with</div>
                        </div>
                    </div>

                    <!-- Court Selection -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="addCourtId" class="form-label">Court <span class="text-danger">*</span></label>
                            <select class="form-select" id="addCourtId" name="CourtId" required>
                                <option value="">Select a court...</option>
                                <!-- This should be populated based on client -->
                            </select>
                            <div class="form-text">Select the court where the game will be played</div>
                        </div>
                    </div>

                    <!-- Game Status -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="addStatus" class="form-label">Status</label>
                            <select class="form-select" id="addStatus" name="Status">
                                <option value="Scheduled">Scheduled</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="addClientId" class="form-label">Client ID</label>
                            <input type="text" class="form-control" id="addClientId" name="ClientId" placeholder="Auto-filled from run">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-orange">
                        <i class="bi bi-plus-circle me-2"></i>Create Game
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Game Modal -->
<div class="modal fade" id="editGameModal" tabindex="-1" aria-labelledby="editGameModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editGameModalLabel">Edit Game</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs" id="editGameTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="game-details-tab" data-bs-toggle="tab" data-bs-target="#game-details-tab-pane" type="button" role="tab">Game Details</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="game-players-tab" data-bs-toggle="tab" data-bs-target="#game-players-tab-pane" type="button" role="tab">Players</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="game-stats-tab" data-bs-toggle="tab" data-bs-target="#game-stats-tab-pane" type="button" role="tab">Statistics</button>
                    </li>
                </ul>
                <div class="tab-content" id="editGameTabContent">
                    <!-- Game Details Tab -->
                    <div class="tab-pane fade show active" id="game-details-tab-pane" role="tabpanel">
                        <form id="editGameForm" method="post" action="@Url.Action("Edit", "Game")" class="mt-4">
                            @Html.AntiForgeryToken()
                            <input type="hidden" id="editGameId" name="GameId" value="" />

                            <!-- Basic Game Information -->
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="editGameNumber" class="form-label">Game Number</label>
                                    <input type="text" class="form-control bg-light text-muted" id="editGameNumber" name="GameNumber" readonly>
                                </div>
                                <div class="col-md-6">
                                    <label for="editStatus" class="form-label">Status</label>
                                    <select class="form-select" id="editStatus" name="Status">
                                        <option value="Scheduled">Scheduled</option>
                                        <option value="In Progress">In Progress</option>
                                        <option value="Completed">Completed</option>
                                        <option value="Cancelled">Cancelled</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="editRunId" class="form-label">Associated Run</label>
                                    <select class="form-select" id="editRunId" name="RunId">
                                        <option value="">Select a run...</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="editCourtId" class="form-label">Court</label>
                                    <select class="form-select" id="editCourtId" name="CourtId">
                                        <option value="">Select a court...</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <label for="editClientId" class="form-label">Client ID</label>
                                    <input type="text" class="form-control" id="editClientId" name="ClientId">
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-danger me-auto" id="deleteGameBtn">Delete Game</button>
                                <button type="submit" class="btn btn-orange">Save Changes</button>
                            </div>
                        </form>
                    </div>

                    <!-- Players Tab -->
                    <div class="tab-pane fade" id="game-players-tab-pane" role="tabpanel">
                        <div class="mt-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h6 class="mb-0">Game Players</h6>
                                <button class="btn btn-sm btn-outline-primary" id="addPlayerBtn">
                                    <i class="bi bi-person-plus me-1"></i>Add Player
                                </button>
                            </div>

                            <div id="gamePlayersList" class="border rounded p-3" style="min-height: 200px;">
                                <div class="text-center py-4 text-muted">
                                    <i class="bi bi-people"></i>
                                    <p class="mb-0 mt-2">No players loaded</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Statistics Tab -->
                    <div class="tab-pane fade" id="game-stats-tab-pane" role="tabpanel">
                        <div class="mt-4">
                            <h6 class="mb-3">Game Statistics</h6>
                            <div class="row text-center g-3">
                                <div class="col-md-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h3 class="mb-1 text-primary" id="totalPlayers">0</h3>
                                            <p class="mb-0 small text-muted">Total Players</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h3 class="mb-1 text-success" id="gameDuration">0:00</h3>
                                            <p class="mb-0 small text-muted">Duration</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h3 class="mb-1 text-info" id="totalScore">0</h3>
                                            <p class="mb-0 small text-muted">Total Score</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card">
                                        <div class="card-body">
                                            <h3 class="mb-1 text-warning" id="gameRating">--</h3>
                                            <p class="mb-0 small text-muted">Rating</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Game Confirmation Modal -->
<div class="modal fade" id="deleteGameModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this game? This action cannot be undone.</p>
                <p class="text-danger"><strong>Note:</strong> All game data and statistics will be permanently removed.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteGameForm" method="post" action="@Url.Action("Delete", "Game")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteGameId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Delete Game</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables Scripts -->
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/responsive.bootstrap5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.bootstrap5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>

    <!-- API URL Configuration -->
    <script>
        window.appUrls = {
            getGameData: '@Url.Action("GetGameData", "Game")',
            getRunData: '@Url.Action("GetRunData", "Run")',
            getCourtData: '@Url.Action("GetCourtData", "Court")'
        };
        console.log('Game API URLs configured:', window.appUrls);
    </script>

    <!-- Game Management Script -->
    <script type="text/javascript" src="~/js/utilities.js"></script>
    <script type="text/javascript" src="~/js/gameManagement.js"></script>
}

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "scheduled" => "bg-primary",
            "in progress" => "bg-warning",
            "completed" => "bg-success",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}