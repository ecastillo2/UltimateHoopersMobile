    <!-- Game Rules Section -->
    <section id="rules" class="py-8">
        <div class="container">
            <div class="text-center mb-7">
                <h2 class="fs-9 fw-bold mb-3 text-navy">Game Rules & Format</h2>
                <p class="fs-4 text-muted mx-auto" style="max-width: 700px;">Understanding our standardized game format ensures fair play and maximum enjoyment for all participants</p>
            </div>

            <!-- Game Timing Overview -->
            <div class="row mb-6">
                <div class="col-lg-8 mx-auto">
                    <div class="clock-display">
                        <h3 class="fs-4 fw-bold mb-3">Standard Game Format</h3>
                        <div class="row text-center">
                            <div class="col-md-4">
                                <div class="clock-number">8</div>
                                <div class="fs-5">Minutes Per Game</div>
                            </div>
                            <div class="col-md-4">
                                <div class="clock-number">2</div>
                                <div class="fs-5">Minutes Between Games</div>
                            </div>
                            <div class="col-md-4">
                                <div class="clock-number">10</div>
                                <div class="fs-5">Total Time Clock</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detailed Rules -->
            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="card rule-card shadow-sm">
                        <div class="card-body p-4">
                            <div class="rule-icon">
                                <i class="ti ti-clock"></i>
                            </div>
                            <h3 class="fs-5 fw-bold mb-3">Game Clock Rules</h3>

                            <div class="rule-step">
                                <div class="step-number">1</div>
                                <div>
                                    <h5 class="mb-2">Running Clock</h5>
                                    <p class="mb-1">Clock runs continuously for the first 7 minutes of each 8-minute game</p>
                                    <span class="timing-badge">0:00 - 7:00</span>
                                </div>
                            </div>

                            <div class="rule-step">
                                <div class="step-number">2</div>
                                <div>
                                    <h5 class="mb-2">Final Minute</h5>
                                    <p class="mb-1">Clock stops on dead balls, fouls, and timeouts during the final minute</p>
                                    <span class="warning-badge">7:00 - 8:00</span>
                                </div>
                            </div>

                            <div class="rule-highlight">
                                <strong>Exception:</strong> Clock may be stopped for injuries at any time during the game at the referee's discretion.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card rule-card shadow-sm">
                        <div class="card-body p-4">
                            <div class="rule-icon">
                                <i class="ti ti-hourglass-high"></i>
                            </div>
                            <h3 class="fs-5 fw-bold mb-3">Shot Clock Rules</h3>

                            <div class="rule-step">
                                <div class="step-number">1</div>
                                <div>
                                    <h5 class="mb-2">Regular Time</h5>
                                    <p class="mb-1">Standard shot clock applies for the first 7 minutes</p>
                                    <span class="timing-badge">Standard Shot Clock</span>
                                </div>
                            </div>

                            <div class="rule-step">
                                <div class="step-number">2</div>
                                <div>
                                    <h5 class="mb-2">Final Minute (Above 10 Seconds)</h5>
                                    <p class="mb-1">Shot clock is half the game clock when game clock is above 10 seconds</p>
                                    <span class="warning-badge">Shot Clock = Game Clock ÷ 2</span>
                                </div>
                            </div>

                            <div class="rule-step">
                                <div class="step-number">3</div>
                                <div>
                                    <h5 class="mb-2">Final 10 Seconds</h5>
                                    <p class="mb-1">Shot clock equals the entire game clock when under 10 seconds</p>
                                    <span class="warning-badge">Shot Clock = Game Clock</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card rule-card shadow-sm">
                        <div class="card-body p-4">
                            <div class="rule-icon">
                                <i class="ti ti-users-group"></i>
                            </div>
                            <h3 class="fs-5 fw-bold mb-3">Player Rotation</h3>

                            <div class="rule-step">
                                <div class="step-number">1</div>
                                <div>
                                    <h5 class="mb-2">Fair Play Priority</h5>
                                    <p class="mb-1">Players who haven't played yet get priority for the next game</p>
                                    <span class="timing-badge">Equal Opportunity</span>
                                </div>
                            </div>

                            <div class="rule-step">
                                <div class="step-number">2</div>
                                <div>
                                    <h5 class="mb-2">Selection Process</h5>
                                    <p class="mb-1">If all players have played equally, selection is made by random draw/die roll</p>
                                    <span class="timing-badge">Random Selection</span>
                                </div>
                            </div>

                            <div class="rule-highlight">
                                <strong>Goal:</strong> Ensure every player gets equal playing time throughout the session.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card rule-card shadow-sm">
                        <div class="card-body p-4">
                            <div class="rule-icon">
                                <i class="ti ti-refresh"></i>
                            </div>
                            <h3 class="fs-5 fw-bold mb-3">Game Transitions</h3>

                            <div class="rule-step">
                                <div class="step-number">1</div>
                                <div>
                                    <h5 class="mb-2">Rest Period</h5>
                                    <p class="mb-1">Exactly 2 minutes between each 8-minute game for rest and rotation</p>
                                    <span class="timing-badge">2 Minutes Break</span>
                                </div>
                            </div>

                            <div class="rule-step">
                                <div class="step-number">2</div>
                                <div>
                                    <h5 class="mb-2">Total Session Time</h5>
                                    <p class="mb-1">Each complete game cycle takes exactly 10 minutes (8 play + 2 rest)</p>
                                    <span class="timing-badge">10 Minute Blocks</span>
                                </div>
                            </div>

                            <div class="rule-step">
                                <div class="step-number">3</div>
                                <div>
                                    <h5 class="mb-2">Next Game Setup</h5>
                                    <p class="mb-1">Use break time for player selection and court preparation</p>
                                    <span class="timing-badge">Preparation Time</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Reference -->
            <div class="row mt-5">
                <div class="col-lg-10 mx-auto">
                    <div class="card rule-card shadow-lg" style="background: linear-gradient(135deg, #342580 0%, #4a3b8a 100%);">
                        <div class="card-body p-4 text-white">
