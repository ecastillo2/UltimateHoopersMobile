@section Styles {
    <style>
        :root {
            --primary-color: #ff6238;
            --secondary-color: #342580;
            --accent-color: #3BACB6;
            --light-color: #F8F9FA;
            --dark-color: #212529;
        }

        body {
            font-family: 'Poppins', sans-serif;
            color: var(--dark-color);
        }

        .hero-section {
            background: linear-gradient(135deg, var(--secondary-color) 0%, #251b5c 100%);
            color: white;
            padding: 6rem 0;
            position: relative;
            overflow: hidden;
        }

        .hero-image {
            position: relative;
            z-index: 1;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }

            .hero-image:hover {
                transform: translateY(-10px);
            }

        .bg-orange {
            background-color: var(--primary-color) !important;
        }

        .text-orange {
            color: var(--primary-color) !important;
        }

        .bg-navy {
            background-color: var(--secondary-color) !important;
        }

        .text-navy {
            color: var(--secondary-color) !important;
        }

        .btn-orange {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: white;
        }

            .btn-orange:hover {
                background-color: #e55530;
                border-color: #e55530;
                color: white;
            }

        .btn-outline-orange {
            background-color: transparent;
            border-color: var(--primary-color);
            color: var(--primary-color);
        }

            .btn-outline-orange:hover {
                background-color: var(--primary-color);
                border-color: var(--primary-color);
                color: white;
            }

        .btn-navy {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
            color: white;
        }

            .btn-navy:hover {
                background-color: #2a1e65;
                border-color: #2a1e65;
                color: white;
            }

        .btn-outline-navy {
            background-color: transparent;
            border-color: var(--secondary-color);
            color: var(--secondary-color);
        }

            .btn-outline-navy:hover {
                background-color: var(--secondary-color);
                border-color: var(--secondary-color);
                color: white;
            }

        .feature-card {
            border-radius: 15px;
            transition: all 0.3s ease;
            border: none;
            height: 100%;
        }

            .feature-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            }

        .feature-icon {
            width: 70px;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 20px;
            margin-bottom: 1.5rem;
            background-color: rgba(255, 98, 56, 0.1);
            color: var(--primary-color);
            font-size: 2rem;
        }

        .testimonial-card {
            border-radius: 15px;
            transition: all 0.3s ease;
            border: none;
        }

            .testimonial-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            }

        .coach-card {
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            border: none;
        }

            .coach-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            }

        .coach-img {
            height: 250px;
            object-fit: cover;
        }

        .coach-social a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background-color: var(--light-color);
            color: var(--primary-color);
            margin: 0 5px;
            transition: all 0.3s ease;
        }

            .coach-social a:hover {
                background-color: var(--primary-color);
                color: white;
            }

        .app-badge {
            transition: all 0.3s ease;
        }

            .app-badge:hover {
                transform: translateY(-5px);
            }

        .footer-link {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .footer-link:hover {
                color: white;
                text-decoration: none;
            }

        .login-btn {
            background-color: transparent;
            border: 2px solid white;
            color: white;
            border-radius: 50px;
            padding: 0.5rem 1.5rem;
            transition: all 0.3s ease;
        }

            .login-btn:hover {
                background-color: white;
                color: var(--secondary-color);
            }

        .circle-decoration {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 98, 56, 0.1);
            z-index: 0;
        }

        .basketball-icon {
            animation: bounce 2s infinite alternate;
            display: inline-block;
        }

        @@keyframes bounce {
            from

        {
            transform: translateY(0px);
        }

        to {
            transform: translateY(-15px);
        }

        }

        #login-modal .modal-content {
            border-radius: 20px;
            overflow: hidden;
        }

        #login-modal .modal-header {
            background-color: var(--secondary-color);
            color: white;
            border-bottom: none;
        }

        #login-modal .modal-footer {
            border-top: none;
        }

        .tab-pane {
            padding: 20px 0;
        }

        .nav-tabs {
            border-bottom: none;
        }

            .nav-tabs .nav-link {
                border: none;
                color: var(--dark-color);
                font-weight: 500;
                padding: 10px 20px;
                border-radius: 0;
                position: relative;
            }

                .nav-tabs .nav-link.active {
                    color: var(--primary-color);
                    background-color: transparent;
                }

                    .nav-tabs .nav-link.active::after {
                        content: '';
                        position: absolute;
                        bottom: 0;
                        left: 0;
                        width: 100%;
                        height: 3px;
                        background-color: var(--primary-color);
                    }

        .hover-shadow-lg {
            transition: box-shadow 0.3s ease;
        }

            .hover-shadow-lg:hover {
                box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
            }

        .transition-all {
            transition: all 0.3s ease;
        }
