@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Handle select all checkbox
            const selectAllCheckbox = document.getElementById('selectAll');
            const userCheckboxes = document.querySelectorAll('.user-select');

            selectAllCheckbox.addEventListener('change', function() {
                const isChecked = this.checked;
                userCheckboxes.forEach(checkbox => {
                    checkbox.checked = isChecked;
                });
            });

            // Uncheck "select all" if any checkbox is unchecked
            userCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    if (!this.checked) {
                        selectAllCheckbox.checked = false;
                    } else {
                        // Check if all checkboxes are checked
                        const allChecked = Array.from(userCheckboxes).every(cb => cb.checked);
                        selectAllCheckbox.checked = allChecked;
                    }
                });
            });

            // Handle search functionality
            const searchInput = document.getElementById('userSearch');
            searchInput.addEventListener('keyup', function() {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('#usersTable tbody tr');

                rows.forEach(row => {
                    const name = row.querySelector('.fw-semibold').textContent.toLowerCase();
                    const email = row.querySelector('td:nth-child(3)').textContent.toLowerCase();
                    const role = row.querySelector('td:nth-child(4)').textContent.toLowerCase();

                    if (name.includes(searchTerm) || email.includes(searchTerm) || role.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });

                updateEntriesInfo();
            });

            // Handle filter dropdown
            const filterDropdown = document.getElementById('userFilter');
            filterDropdown.addEventListener('change', function() {
                const filterValue = this.value.toLowerCase();
                const rows = document.querySelectorAll('#usersTable tbody tr');

                rows.forEach(row => {
                    const status = row.querySelector('.status-badge').textContent.toLowerCase();
                    const role = row.querySelector('td:nth-child(4)').textContent.toLowerCase();

                    let shouldShow = true;

                    if (filterValue === 'active' && status !== 'active') {
                        shouldShow = false;
                    } else if (filterValue === 'inactive' && status !== 'inactive') {
                        shouldShow = false;
                    } else if (filterValue === 'admin' && !role.includes('administrator')) {
                        shouldShow = false;
                    } else if (filterValue === 'coach' && !role.includes('coach')) {
                        shouldShow = false;
                    } else if (filterValue === 'player' && !role.includes('player')) {
                        shouldShow = false;
                    }

                    row.style.display = shouldShow ? '' : 'none';
                });

                updateEntriesInfo();
            });

            // Table sorting functionality
            const sortableHeaders = document.querySelectorAll('.sortable');
            sortableHeaders.forEach(header => {
                header.addEventListener('click', function() {
                    const sortField = this.getAttribute('data-sort');
                    const isAscending = !this.classList.contains('asc');

                    // Remove all sort classes
                    sortableHeaders.forEach(h => {
                        h.classList.remove('asc', 'desc');
                    });

                    // Add sort class to current header
                    this.classList.add(isAscending ? 'asc' : 'desc');

                    // Sort the table
                    sortTable(sortField, isAscending);
                });
            });

            // Function to sort table
            function sortTable(field, isAscending) {
                const tbody = document.querySelector('#usersTable tbody');
                const rows = Array.from(tbody.querySelectorAll('tr'));

                // Sort rows based on field
                rows.sort((a, b) => {
                    let valueA, valueB;

                    switch(field) {
                        case 'name':
                            valueA = a.querySelector('.fw-semibold').textContent;
                            valueB = b.querySelector('.fw-semibold').textContent;
                            break;
                        case 'email':
                            valueA = a.querySelector('td:nth-child(3)').textContent;
                            valueB = b.querySelector('td:nth-child(3)').textContent;
                            break;
                        case 'role':
                            valueA = a.querySelector('td:nth-child(4)').textContent;
                            valueB = b.querySelector('td:nth-child(4)').textContent;
                            break;
                        case 'lastLogin':
                            valueA = new Date(a.querySelector('td:nth-child(5)').textContent);
                            valueB = new Date(b.querySelector('td:nth-child(5)').textContent);
                            break;
                        case 'status':
                            valueA = a.querySelector('.status-badge').textContent;
                            valueB = b.querySelector('.status-badge').textContent;
                            break;
                        default:
                            valueA = '';
                            valueB = '';
                    }

                    if (valueA < valueB) {
                        return isAscending ? -1 : 1;
                    }
                    if (valueA > valueB) {
                        return isAscending ? 1 : -1;
                    }
                    return 0;
                });

                // Reorder the rows in the DOM
                rows.forEach(row => {
                    tbody.appendChild(row);
                });
            }

            // Update entries info
            function updateEntriesInfo() {
                const visibleRows = document.querySelectorAll('#usersTable tbody tr:not([style*="display: none"])');
                const totalEntries = document.getElementById('total-entries');
                const startEntry = document.getElementById('start-entry');
                const endEntry = document.getElementById('end-entry');

                totalEntries.textContent = visibleRows.length;
                startEntry.textContent = visibleRows.length > 0 ? '1' : '0';
                endEntry.textContent = visibleRows.length;
            }

            // Pagination functionality (simple demonstration)
            const pageLinks = document.querySelectorAll('.page-link');
            pageLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();

                    // Remove active class from all page items
                    document.querySelectorAll('.page-item').forEach(item => {
                        item.classList.remove('active');
                    });

                    // Add active class to clicked page item
                    if (!this.getAttribute('aria-label')) {
                        this.closest('.page-item').classList.add('active');
                    }
                });
            });

            // Form submission handlers
            document.getElementById('addUserForm').addEventListener('submit', function(e) {
                e.preventDefault();
                // Add form submission logic here
                $('#addUserModal').modal('hide');
            });

            document.getElementById('editUserForm').addEventListener('submit', function(e) {
                e.preventDefault();
                // Edit form submission logic here
                $('#editUserModal').modal('hide');
            });
        });
    </script>
}