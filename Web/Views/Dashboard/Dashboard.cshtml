                                    <p class="text-muted small">Completed sprint drill under target time</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Admin-specific content -->
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">Today's Runs</h5>
                                <a href="#" class="text-navy text-decoration-none">View All</a>
                            </div>
                            <div class="card-body">
                                @if (Model?.RunLists.Items != null && Model.RunLists.Items .Any())
                                {
                                    @foreach (var item in Model.RunLists.Items )
                                    {
                                        <div class="coach-item">
                                            <div class="coach-avatar">JP</div>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-0">@item.Name</h6>
                                                <p class="text-muted small mb-0">@item.RunDate</p>
                                            </div>
                                            @* <a href="#" class="btn btn-sm btn-outline-navy">View Run</a> *@
                                        </div>

                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-header bg-white">
                                <h5 class="card-title mb-0">Upcoming Events</h5>
                            </div>
                            <div class="card-body">
                                @if (Model?.EventList != null && Model.EventList.Any())
                                {
                                    @foreach (var item in Model.EventList)
                                    {
                                        <div class="upcoming-event">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <h6 class="mb-0">@item.Title</h6>
                                                <span class="badge bg-navy">Today</span>
                                            </div>
                                            <p class="text-muted small mb-0">@item.Title</p>
                                           @*  <p class="text-muted small mb-0">5 players confirmed</p> *@
                                        </div>

                                    }
                                }
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header bg-white">
                                <h5 class="card-title mb-0">Quick Actions</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <a href="/Run/RunCalendar/" class="btn btn-outline-navy">
                                        <i class="bi bi-calendar-plus me-2"></i> Run Calendar
                                    </a>
                                    <a href="#" class="btn btn-outline-navy">
                                        <i class="bi bi-clipboard-plus me-2"></i> New Run
                                    </a>
                                   @*  <a href="#" class="btn btn-outline-navy">
                                        <i class="bi bi-people-fill me-2"></i> Add Client
                                    </a> *@
                                   @*  <a href="#" class="btn btn-outline-navy">
                                        <i class="bi bi-file-earmark-text me-2"></i> Generate Report
                                    </a> *@
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple script to handle sidebar active state
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarLinks = document.querySelectorAll('.sidebar-link');
            sidebarLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    // If not a real navigation link (just a demo)
                    if (this.getAttribute('href') === '#') {
                        e.preventDefault();
                        // Remove active class from all links
                        sidebarLinks.forEach(l => l.classList.remove('active'));
                        // Add active class to clicked link
                        this.classList.add('active');
                    }
                });
            });
        });
    </script>
}