                            <i class="bi bi-graph-up"></i> Invioces
                        </a>
           <a href="/Financial/Transaction/" class="sidebar-link">
                            <i class="bi bi-graph-up"></i> Transactions
                        </a>
             <a href="/Financial/Subscription/" class="sidebar-link">
                            <i class="bi bi-graph-up"></i> Subscriptions
                        </a>
        </ul>
    </div>
</li>
                       
                    }

                     <a href="/Account/Account/" class="sidebar-link">
                            <i class="bi bi-person-lock"></i> Account
                        </a>
                   
                    <a href="#" class="sidebar-link">
                        <i class="bi bi-gear"></i> Settings
                    </a>
                </div>

                <div class="mt-auto">
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger w-100">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Stats Row -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <a href="/Run/Run/" style="text-decoration: none;">
                    <div class="card stats-card">
                        <div class="card-body p-4">
                            <div class="stats-icon bg-orange-subtle text-orange">
                                <i class="bi bi-calendar-check"></i>
                            </div>
                            <h3 class="fs-5 fw-bold mb-1">@Model.reportDto.RunsCount</h3>
                            <p class="text-muted mb-0">@(isClient ? "Runs" : "Runs")</p>
                        </div>
                    </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="/User/User/" style="text-decoration: none;">
                    <div class="card stats-card">
                        <div class="card-body p-4">
                            <div class="stats-icon bg-navy-subtle text-navy">
                                <i class="bi bi-@(isClient ? "trophy" : "people")"></i>
                            </div>
                            <h3 class="fs-5 fw-bold mb-1">@(isClient ? "72%" : @Model.reportDto.UsersCount)</h3>
                            <p class="text-muted mb-0">@(isClient ? "Goal Completion" : "Active Users")</p>
                        </div>
                    </div>
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="/Client/Client/" style="text-decoration: none;">
                    <div class="card stats-card">
                        <div class="card-body p-4">
                            <div class="stats-icon bg-success-subtle text-success">
                                <i class="bi bi-briefcase-fill"></i>
                            </div>
                            <h3 class="fs-5 fw-bold mb-1">@(isClient ? "+15%" : @Model.reportDto.ClientsCount)</h3>
                            <p class="text-muted mb-0">@(isClient ? "Shooting Improvement" : "Clients")</p>
                        </div>
                    </div>
                    </a>
                </div>
            </div>

            <!-- Content Cards -->
            <div class="row g-4">
                @if (isClient)
                {
                    <!-- Client-specific content -->
                    <div class="col-md-8">
                        <div class="card mb-4">
                            <div class="card-header bg-white">
                                <h5 class="card-title mb-0">Recent Progress</h5>
                            </div>
                            <div class="card-body">
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Shooting Accuracy</span>
                                        <span class="text-orange">72%</span>
                                    </div>
                                    <div class="progress progress-stats">
                                        <div class="progress-bar bg-orange" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Dribbling Skills</span>
                                        <span class="text-orange">65%</span>
                                    </div>
                                    <div class="progress progress-stats">
                                        <div class="progress-bar bg-orange" role="progressbar" style="width: 65%" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>Defensive Stance</span>
                                        <span class="text-orange">58%</span>
                                    </div>
                                    <div class="progress progress-stats">
                                        <div class="progress-bar bg-orange" role="progressbar" style="width: 58%" aria-valuenow="58" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
