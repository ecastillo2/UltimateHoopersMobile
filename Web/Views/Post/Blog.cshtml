@model Website.ViewModels.PostsViewModel

@{
    ViewData["Title"] = "Posts";
    var userType = ViewData["UserType"]?.ToString() ?? "Admin";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.bootstrap5.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/management.css">
    <style>
        .modal-loading-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.9);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1060;
        }

        .post-image {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid #dee2e6;
        }

        .post-initials {
            width: 40px;
            height: 40px;
            background-color: var(--secondary-color);
            color: white;
            border-radius: 8px;
            font-weight: bold;
            font-size: 14px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .image-preview-container {
            border: 2px dashed #dee2e6;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            .image-preview-container.has-image {
                border: 2px solid var(--primary-color);
            }

        #currentImage, #newImage {
            max-width: 100%;
            max-height: 180px;
            object-fit: cover;
            border-radius: 8px;
        }

        .post-type-badge {
            font-size: 0.75em;
            padding: 0.25em 0.5em;
            border-radius: 0.25rem;
        }
    </style>
}

<div class="dashboard-header">
    <div class="container">
        <h1>Posts</h1>
        <p class="lead">Manage posts, announcements, and content for the community</p>
    </div>
</div>

<div class="container">
    <!-- Back button to dashboard -->
    <div class="back-button">
        <a href="@Url.Action("Dashboard", "Dashboard")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <!-- Post Filters -->
    <div class="mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">Filter Posts</h5>
                    <button class="btn btn-sm btn-outline-secondary" id="resetFilters">
                        <i class="bi bi-arrow-counterclockwise me-1"></i>
                        Reset Filters
                    </button>
                </div>

                <div class="row g-3">
                    <div class="col-md-3">
                        <label for="statusFilter" class="form-label">Status</label>
                        <select class="form-select" id="statusFilter">
                            <option value="all" selected>All Statuses</option>
                            <option value="active">Active</option>
                            <option value="draft">Draft</option>
                            <option value="archived">Archived</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="typeFilter" class="form-label">Post Type</label>
                        <select class="form-select" id="typeFilter">
                            <option value="all" selected>All Types</option>
                            <option value="news">News</option>
                            <option value="announcement">Announcement</option>
                            <option value="event">Event</option>
                            <option value="general">General</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="dateFilter" class="form-label">Date Created</label>
                        <select class="form-select" id="dateFilter">
                            <option value="all" selected>All Time</option>
                            <option value="today">Today</option>
                            <option value="this-week">This Week</option>
                            <option value="this-month">This Month</option>
                            <option value="this-year">This Year</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="authorFilter" class="form-label">Author</label>
                        <select class="form-select" id="authorFilter">
                            <option value="all" selected>All Authors</option>
                            <option value="admin">Admin</option>
                            <option value="moderator">Moderator</option>
                            <option value="user">User</option>
                        </select>
                    </div>
                </div>

                <div class="mt-3" id="activeFilters">
                    <span class="badge bg-secondary me-2">Active Filters:</span>
                    <span class="text-muted filter-none">None</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12 text-end">
            <button type="button" class="btn btn-orange" data-bs-toggle="modal" data-bs-target="#addPostModal">
                <i class="bi bi-plus-circle me-2"></i>Add Post
            </button>
        </div>
    </div>

    <!-- DataTable -->
    @if (Model?.Posts != null && Model.Posts.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <table id="postsTable" class="table table-striped table-hover w-100">
                    <thead>
                        <tr>
                           
                            <th>Post</th>
                            <th>Type</th>
                            <th>Date</th>
                            <th>Status</th>
                           @*  <th>Author</th> *@
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var post in Model.Posts)
                        {
                            <tr data-status="@(post.Status?.ToLower() ?? "active")"
                                data-type="@(post.PostType?.ToLower() ?? "general")"
                                data-date="@(post.PostedDate )
                                data-author="@(post.ProfileId ?? "")"
                                data-post-id="@post.PostId"
                                data-title="@post.Title"
                                data-caption="@post.Caption"
                                data-image-url="@post.PostFileURL"
                                data-start-date="@post.PostedDate"
                               ">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="post-image-cell me-3">
                                            @if (!string.IsNullOrEmpty(post.PostFileURL))
                                            {
                                                <img src="@post.ThumbnailUrl)" alt="@post.Title" class="post-image"
                                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                                                     loading="lazy">
                                                <div class="post-initials" style="display: none;">
                                                    <span>@(post.Title?.Substring(0, 1).ToUpper() ?? "P")</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="post-initials">
                                                    <span>@(post.Title?.Substring(0, 1).ToUpper() ?? "P")</span>
                                                </div>
                                            }
                                        </div>
                                        <div>
                                            <div class="fw-semibold post-title">@post.Title</div>
                                            <div class="text-muted small post-description">@(post.Caption?.Length > 50 ? post.Caption.Substring(0, 50) + "..." : post.Caption)</div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge post-type-badge bg-info">@(post.PostType ?? "General")</span>
                                </td>
                                <td class="post-date">@(post.PostedDate)</td>
                                <td>
                                    <span class="badge bg-success badge-pill post-status">@(post.Status ?? "Active")</span>
                                </td>
                            @*     <td class="post-author">@(post.ProfileId ?? "System")</td> *@
                                <td>
                                    <div class="table-actions">
                                        <button type="button" class="btn btn-sm btn-outline-primary action-icon"
                                                data-bs-toggle="modal"
                                                data-bs-target="#editPostModal"
                                                data-post-id="@post.PostId"
                                                title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <a href="@Url.Action("Details", "Post", new { id = post.PostId })"
                                           class="btn btn-sm btn-primary action-icon" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="no-posts-message">
            <i class="bi bi-file-post" style="font-size: 3rem; color: var(--secondary-color);"></i>
            <h3 class="mt-3">No Posts Found</h3>
            <p class="text-muted">There are no posts available at the moment. Add a new post to get started!</p>
            <button type="button" class="btn btn-orange mt-3" data-bs-toggle="modal" data-bs-target="#addPostModal">
                <i class="bi bi-plus-circle me-2"></i>Add Post
            </button>
        </div>
    }
</div>

<!-- Add Post Modal -->
<div class="modal fade" id="addPostModal" tabindex="-1" aria-labelledby="addPostModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPostModalLabel">Add New Post</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addPostForm" method="post" action="@Url.Action("Create", "Post")" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="addTitle" class="form-label">Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="addTitle" name="Title" required>
                        </div>
                    </div>
                   
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="addContent" class="form-label">Content <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="addContent" name="Content" rows="5" placeholder="Full post content" required></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="addPostType" class="form-label">Post Type <span class="text-danger">*</span></label>
                            <select class="form-select" id="addPostType" name="PostType" required>
                                <option value="">Select Type</option>
                                <option value="News">News</option>
                                <option value="Announcement">Announcement</option>
                                <option value="Event">Event</option>
                                <option value="General">General</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="addStatus" class="form-label">Status</label>
                            <select class="form-select" id="addStatus" name="Status">
                                <option value="Active" selected>Active</option>
                                <option value="Draft">Draft</option>
                                <option value="Archived">Archived</option>
                            </select>
                        </div>
                    </div>
                   
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="addImageFile" class="form-label">Upload Image</label>
                            <input type="file" class="form-control" id="addImageFile" name="ImageFile" accept="image/*">
                            <div class="form-text">Supported: JPG, PNG, GIF. Max size: 5MB</div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-orange">Add Post</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Post Modal -->
<div class="modal fade" id="editPostModal" tabindex="-1" aria-labelledby="editPostModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPostModalLabel">Edit Post</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs" id="editPostTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="post-details-tab" data-bs-toggle="tab" data-bs-target="#post-details-tab-pane" type="button" role="tab">Post Details</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="post-info-tab" data-bs-toggle="tab" data-bs-target="#post-info-tab-pane" type="button" role="tab">Post Info</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="analytics-tab" data-bs-toggle="tab" data-bs-target="#analytics-tab-pane" type="button" role="tab">Analytics</button>
                    </li>
                </ul>
                <div class="tab-content" id="editPostTabContent">
                    <!-- Post Details Tab -->
                    <div class="tab-pane fade show active" id="post-details-tab-pane" role="tabpanel">
                        <form id="editPostForm" method="post" action="@Url.Action("Edit", "Post")" enctype="multipart/form-data" class="mt-4">
                            @Html.AntiForgeryToken()
                            <input type="hidden" id="editPostId" name="PostId" value="" />

                            <!-- Image Section -->
                            <div class="row mb-4">
                                <div class="col-md-12">
                                    <label class="form-label fw-bold">Post Image</label>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="image-preview-container mb-3">
                                                <div id="currentImagePreview" class="current-image-preview border rounded p-3 text-center" style="min-height: 200px; background-color: #f8f9fa;">
                                                    <img id="currentImage" src="" alt="Current Post Image" class="img-fluid rounded" style="max-height: 180px; display: none;">
                                                    <div id="currentImagePlaceholder" class="d-flex flex-column align-items-center justify-content-center h-100">
                                                        <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                                        <p class="text-muted mt-2 mb-0">Current Image</p>
                                                        <small class="text-muted">No image uploaded</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="mb-3">
                                                <label for="editImageFile" class="form-label">Upload New Image</label>
                                                <input type="file" class="form-control" id="editImageFile" name="ImageFile" accept="image/*">
                                                <div class="form-text">Supported: JPG, PNG, GIF. Max size: 5MB</div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="editImageURL" class="form-label">Or Image URL</label>
                                                <input type="url" class="form-control" id="editImageURL" name="ImageURL" placeholder="https://example.com/image.jpg">
                                                <div class="form-text">Provide a direct link to the post image</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Basic Post Information -->
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <label for="editTitle" class="form-label">Post Title <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="editTitle" name="Title" required>
                                </div>
                            </div>

                            

                           

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="editPostType" class="form-label">Post Type <span class="text-danger">*</span></label>
                                    <select class="form-select" id="editPostType" name="PostType" required>
                                        <option value="">Select Type</option>
                                        <option value="News">News</option>
                                        <option value="Announcement">Announcement</option>
                                        <option value="Event">Event</option>
                                        <option value="General">General</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="editStatus" class="form-label">Status</label>
                                    <select class="form-select" id="editStatus" name="Status">
                                        <option value="Active">Active</option>
                                        <option value="Draft">Draft</option>
                                        <option value="Archived">Archived</option>
                                    </select>
                                </div>

                                
                                
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="editType" class="form-label"> Type <span class="text-danger">*</span></label>
                                    <select class="form-select" id="editType" name="Type" required>
                                        <option value="">Select Type</option>
                                        <option value="News">News</option>
                                        <option value="Announcement">Announcement</option>
                                        <option value="Event">Event</option>
                                        <option value="General">General</option>
                                    </select>
                                </div>
                               



                            </div>


                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="button" class="btn btn-danger me-auto" id="deletePostBtn">Delete Post</button>
                                <button type="submit" class="btn btn-orange">Save Changes</button>
                            </div>
                        </form>
                    </div>

                    <!-- Post Info Tab -->
                    <div class="tab-pane fade" id="post-info-tab-pane" role="tabpanel">
                        <div class="mt-4">
                            <div class="text-center mb-4">
                                <div class="rounded-circle bg-navy text-white d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 100px; height: 100px; font-size: 2.5rem;" id="postInfoAvatar">
                                    <span id="postInfoInitials">--</span>
                                </div>
                                <h4 class="mb-1" id="postInfoTitle">--</h4>
                                <p class="text-muted" id="postInfoType">--</p>
                                <div class="d-flex justify-content-center gap-2 mb-2">
                                    <span class="badge bg-primary" id="postInfoStatus">--</span>
                                    <span class="badge bg-secondary" id="postInfoPostType">--</span>
                                </div>
                            </div>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="card h-100">
                                        <div class="card-header bg-white">
                                            <h5 class="card-title mb-0">Post Information</h5>
                                        </div>
                                        <div class="card-body">
                                            <ul class="list-group list-group-flush">
                                                <li class="list-group-item d-flex justify-content-between px-0">
                                                    <span class="text-muted">Title:</span>
                                                    <span id="postInfoTitleDetail">--</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between px-0">
                                                    <span class="text-muted">Author:</span>
                                                    <span id="postInfoAuthor">--</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between px-0">
                                                    <span class="text-muted">Created:</span>
                                                    <span id="postInfoCreated">--</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between px-0">
                                                    <span class="text-muted">Start Date:</span>
                                                    <span id="postInfoStartDate">--</span>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between px-0">
                                                    <span class="text-muted">End Date:</span>
                                                    <span id="postInfoEndDate">--</span>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="card h-100">
                                        <div class="card-header bg-white">
                                            <h5 class="card-title mb-0">Post Statistics</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="row text-center g-3 mt-4">
                                                <div class="col-4">
                                                    <div class="border rounded p-3">
                                                        <h3 class="mb-1 fs-5" id="postInfoViews">0</h3>
                                                        <p class="mb-0 small text-muted">Views</p>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="border rounded p-3">
                                                        <h3 class="mb-1 fs-5" id="postInfoLikes">0</h3>
                                                        <p class="mb-0 small text-muted">Likes</p>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="border rounded p-3">
                                                        <h3 class="mb-1 fs-5" id="postInfoComments">0</h3>
                                                        <p class="mb-0 small text-muted">Comments</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Analytics Tab -->
                    <div class="tab-pane fade" id="analytics-tab-pane" role="tabpanel">
                        <div class="mt-4">
                            <h6 class="mb-3">Post Analytics</h6>
                            <div class="row mb-4">
                                <div class="col-md-3 mb-3">
                                    <label for="totalViews" class="form-label">Total Views</label>
                                    <input type="number" class="form-control" id="totalViews" name="TotalViews" readonly>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="totalLikes" class="form-label">Total Likes</label>
                                    <input type="number" class="form-control" id="totalLikes" name="TotalLikes" readonly>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="totalComments" class="form-label">Total Comments</label>
                                    <input type="number" class="form-control" id="totalComments" name="TotalComments" readonly>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="totalShares" class="form-label">Total Shares</label>
                                    <input type="number" class="form-control" id="totalShares" name="TotalShares" readonly>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Post Confirmation Modal -->
<div class="modal fade" id="deletePostModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this post? This action cannot be undone.</p>
                <p class="text-danger"><strong>Note:</strong> The post and any associated images will be permanently deleted.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deletePostForm" method="post" action="@Url.Action("Delete", "Post")">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deletePostId" name="id" value="" />
                    <button type="submit" class="btn btn-danger">Delete Post</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- CRITICAL: URL configuration must come first -->
    <script>
        window.appUrls = {
            getPostData: '@Url.Action("GetPostData", "Post")',
            uploadImage: '@Url.Action("UploadImage", "Post")',
            validateImageUrl: '@Url.Action("ValidateImageUrl", "Post")'
        };
        console.log('Post API URLs configured:', window.appUrls);
    </script>

    <!-- DataTables Scripts -->
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/responsive.bootstrap5.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.bootstrap5.min.js"></script>
