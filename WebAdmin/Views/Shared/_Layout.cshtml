    <div class="app-topstrip bg-dark py-6 px-3 w-100 d-lg-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center justify-content-center gap-5 mb-2 mb-lg-0">
        <a class="d-flex justify-content-center" href="/">
          <img src="~/images/logos/logo-wrappixel.svg" alt="Your Company Logo" width="150">
        </a>
      </div>

      <div class="d-lg-flex align-items-center gap-2">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="text-white me-3">Welcome, @User.Identity.Name!</div>
            <a asp-controller="Account" asp-action="Logout" class="btn btn-light d-flex align-items-center gap-1">
                <i class="ti ti-logout fs-5"></i>
                Logout
            </a>
        }
        else
        {
            <h3 class="text-white mb-2 mb-lg-0 fs-5 text-center">Business Management Platform</h3>
            <div class="d-flex align-items-center justify-content-center gap-2">
                <a class="btn btn-primary d-flex align-items-center gap-1" href="/#download">
                    <i class="ti ti-download fs-5"></i>
                    Get Mobile App
                </a>
            </div>
        }
      </div>
